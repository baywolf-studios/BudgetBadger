<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' " />
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' " />
  <ItemGroup>
    <Folder Include="Utilities\" />
    <Folder Include="Authentication\" />
    <Folder Include="Models\" />
    <Folder Include="Localization\" />
    <Folder Include="Models\Interfaces\" />
    <Folder Include="Models\Recurrence\" />
    <Folder Include="LocalizedResources\" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Authentication\" />
    <None Remove="NETStandard.Library" />
    <None Remove="Models\" />
    <None Remove="Localization\" />
    <None Remove="Models\Interfaces\" />
    <None Remove="Models\Recurrence\" />
    <None Remove="LocalizedResources\" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Condition=" '$(EnableDefaultEmbeddedResourceItems)' == 'true' " Update="Localization\AppResources.resx">
