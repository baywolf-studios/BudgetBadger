<?xml version="1.0" encoding="UTF-8"?>
<prism:PrismApplication
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Class="BudgetBadger.Forms.App">
	<Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="FontFamilyRegular" x:TypeArguments="x:String">
                <On Platform="iOS">.SFUIText-Regular</On>
                <On Platform="Android">sans-serif</On>
                <On Platform="Windows">Segoe UI</On>
                <On Platform="macOS">SFCompactDisplay-Regular</On>
            </OnPlatform>
            <OnPlatform x:Key="FontFamilyMedium" x:TypeArguments="x:String">
                <On Platform="iOS">.SFUIText-Medium</On>
                <On Platform="Android">sans-serif-medium</On>
                <On Platform="Windows">Segoe UI Medium</On>
                <On Platform="macOS">SFCompactDisplay-Medium</On>
            </OnPlatform>
            <OnPlatform x:Key="AppBarGridHeight" x:TypeArguments="GridLength">
                <On Platform="iOS">44</On>
                <On Platform="Android">56</On>
                <On Platform="Windows">64</On>
                <On Platform="macOS">64</On>
            </OnPlatform>
            <OnPlatform x:Key="AppBarHeight" x:TypeArguments="x:Double">
                <On Platform="iOS">44</On>
                <On Platform="Android">56</On>
                <On Platform="Windows">64</On>
                <On Platform="macOS">64</On>
            </OnPlatform>
            <Color x:Key="AppBarColor">Teal</Color>
            <Color x:Key="PrimaryTextColor" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>                      
                <x:Int32>222</x:Int32>
              </x:Arguments>
            </Color>
            <Color x:Key="SecondaryTextColor" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>                      
                <x:Int32>138</x:Int32>
              </x:Arguments>
            </Color>
            <Color x:Key="Primary87" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>21</x:Int32>
                <x:Int32>101</x:Int32>
                <x:Int32>192</x:Int32>                      
                <x:Int32>222</x:Int32>
              </x:Arguments>
            </Color>
            <Color x:Key="Primary54" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>21</x:Int32>
                <x:Int32>101</x:Int32>
                <x:Int32>192</x:Int32>                      
                <x:Int32>138</x:Int32>
              </x:Arguments>
            </Color>
            <Color x:Key="ListViewGroupTextColor" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>                      
                <x:Int32>138</x:Int32>
              </x:Arguments>
            </Color>
            <Color x:Key="DividerColor" x:FactoryMethod="FromRgba">
              <x:Arguments>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>
                <x:Int32>0</x:Int32>                      
                <x:Int32>31</x:Int32>
              </x:Arguments>
            </Color>
<!--            <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="Blue"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>-->
            <ControlTemplate x:Key="HeaderTemplate">
                <Grid RowSpacing="0" ColumnSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource AppBarGridHeight}"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{StaticResource AppBarGridHeight}"/>
                        <ColumnDefinition Width="{StaticResource AppBarGridHeight}"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="{StaticResource AppBarGridHeight}"/>
                        <ColumnDefinition Width="{StaticResource AppBarGridHeight}"/>
                    </Grid.ColumnDefinitions>
                    <BoxView BackgroundColor="{StaticResource AppBarColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"/>
                    <Label
                        TextColor="White"
                        LineBreakMode="TailTruncation"
                        VerticalOptions="Center"
                        FontSize="17"
                        FontFamily="{StaticResource FontFamilyMedium}"
                        Text="{TemplateBinding Parent.Title}">
                        <Grid.Column>
                            <OnPlatform x:TypeArguments="x:Int32">
                                <On Platform="Android" Value="0"/>
                                <On Platform="iOS" Value="2"/>
                            </OnPlatform>
                        </Grid.Column>
                        <Grid.ColumnSpan>
                            <OnPlatform x:TypeArguments="x:Int32">
                                <On Platform="Android" Value="3"/>
                                <On Platform="iOS" Value="1"/>
                            </OnPlatform>
                        </Grid.ColumnSpan>
                        <Label.Margin>
                            <OnPlatform x:TypeArguments="Thickness">
                                <On Platform="Android" Value="16,0,0,0"/>
                                <On Platform="iOS" Value="0"/>
                            </OnPlatform>
                        </Label.Margin>
                        <Label.HorizontalOptions>
                            <OnPlatform x:TypeArguments="LayoutOptions">
                                <On Platform="Android" Value="Start"/>
                                <On Platform="iOS" Value="Center"/>
                            </OnPlatform>
                        </Label.HorizontalOptions>
                    </Label>
                    <Frame
                        Grid.Row="0"
                        Grid.Column="0"
                        HasShadow="false"
                        Padding="0"
                        Margin="0"
                        CornerRadius="0"
                        BackgroundColor="Transparent">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{TemplateBinding BindingContext.AddCommand}" />
                        </Frame.GestureRecognizers>
                        <Image 
                            HeightRequest="24"
                            WidthRequest="24"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            BackgroundColor="Red">
                        </Image>
                    </Frame>
                    <uc:SearchHeader Grid.Row="0" Grid.ColumnSpan="5"  SearchCommand="{TemplateBinding BindingContext.SearchCommand}"/>
                    <ContentPresenter Grid.Row="1" Grid.ColumnSpan="5"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
