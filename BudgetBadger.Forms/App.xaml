<?xml version="1.0" encoding="UTF-8"?>
<prism:PrismApplication
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Class="BudgetBadger.Forms.App">
	<Application.Resources>
        <ResourceDictionary>

            <Color x:Key="ListGroupHeaderTextColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#004d7f</x:String>
                </x:Arguments>
            </Color>
            <x:Double x:Key="ListHeaderFontSize">14</x:Double>
            <x:Double x:Key="ListHeaderHeight">48</x:Double>
            <x:Double x:Key="ListGroupHeaderFontSize">14</x:Double>
            <x:Double x:Key="ListGroupHeaderHeight">48</x:Double>
            <x:Double x:Key="ListItemFontSize">16</x:Double>
            <x:Double x:Key="ListItemSingleHeight">48</x:Double>
            <x:Double x:Key="ListDenseGroupHeaderFontSize">12</x:Double>
            <x:Double x:Key="ListDenseItemFontSize">13</x:Double>
            <x:Double x:Key="ListDenseItemSecondaryFontSize">13</x:Double>
            <x:Double x:Key="ListDenseGroupHeaderHeight">32</x:Double>
            <x:Double x:Key="ListDenseItemDoubleHeight">60</x:Double>

            <x:Double x:Key="PageHeaderFontSize">20</x:Double>
            <x:Double x:Key="PageSubheaderFontSize">13</x:Double>
            
            <x:Double x:Key="DataGridColumnHeaderFontSize">12</x:Double>
            <x:Double x:Key="DataGridItemFontSize">13</x:Double>
            <x:Double x:Key="DataGridGroupHeaderFontSize">13</x:Double>
            
            <OnPlatform x:Key="FontFamilyRegular" x:TypeArguments="x:String">
                <On Platform="iOS">.SFUIText-Regular</On>
                <On Platform="Android">sans-serif</On>
                <On Platform="Windows">Segoe UI</On>
            </OnPlatform>
            <OnPlatform x:Key="FontFamilyMedium" x:TypeArguments="x:String">
                <On Platform="iOS">.SFUIText-Medium</On>
                <On Platform="Android">sans-serif-medium</On>
                <On Platform="Windows">Segoe UI Medium</On>
            </OnPlatform>
            <OnPlatform x:Key="FontFamilySemiBold" x:TypeArguments="x:String">
                <On Platform="iOS">.SFUIText-SemiBold</On>
                <On Platform="Android">sans-serif-semibold</On>
                <On Platform="Windows">Segoe UI SemiBold</On>
            </OnPlatform>
            <OnPlatform x:Key="AppBarGridSize" x:TypeArguments="GridLength">
                <On Platform="iOS">44</On>
                <On Platform="Android">56</On>
                <On Platform="Windows">64</On>
                <On Platform="macOS">64</On>
            </OnPlatform>
            <Color x:Key="BackgroundColor">White</Color>
            <Color x:Key="AppBarColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#3678AF</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="PrimaryTextColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#191919</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="SecondaryTextColor" x:FactoryMethod="FromHex">
              <x:Arguments>
                <x:String>#737373</x:String>
              </x:Arguments>
            </Color>
            <Color x:Key="PrimaryColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#3678AF</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="IdleColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#737373</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="DisabledColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#999999</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="DividerColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#E0E0E0</x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="ErrorColor">Red</Color>

            <Color x:Key="SelectedNavigationItemColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>#e7eff5</x:String>
                </x:Arguments>
            </Color>
            
            <x:Double x:Key="DisabledOpacity">0.40</x:Double>
            <x:Double x:Key="IdleOpacity">0.55</x:Double>
            <x:Double x:Key="FocusedOpacity">0.9</x:Double>
            
            <FileImageSource x:Key="SettingsTabIcon" File="settingswhitetabicon.png"/>
            <FileImageSource x:Key="AccountsTabIcon" File="accountswhitetabicon.png"/>
            <FileImageSource x:Key="EnvelopesTabIcon" File="envelopeswhitetabicon.png"/>
            <FileImageSource x:Key="PayeesTabIcon" File="payeeswhitetabicon.png"/>
            <FileImageSource x:Key="ReportsTabIcon" File="reportswhitetabicon.png"/>

            <Style x:Key="ListHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource Key=ListHeaderFontSize}"/>
                <Setter Property="TextColor" Value="{StaticResource Key=SecondaryTextColor}"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
            
            <Style x:Key="ListGroupHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource Key=ListGroupHeaderFontSize}"/>
                <Setter Property="TextColor" Value="{StaticResource Key=ListGroupHeaderTextColor}"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
            
            <Style x:Key="ListItemLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource Key=ListItemFontSize}"/>
                <Setter Property="TextColor" Value="{StaticResource Key=PrimaryTextColor}"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
