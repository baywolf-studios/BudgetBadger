<?xml version="1.0" encoding="UTF-8" ?>
<p:BasePage
    x:Class="BudgetBadger.Forms.Settings.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    xmlns:p="clr-namespace:BudgetBadger.Forms.Pages">
    <p:BasePage.Header>
        <p:RootHeader PageTitle="Settings"/>    
    </p:BasePage.Header>
    <p:BasePage.Body>
        <ScrollView
            Margin="0"
            Padding="0"
            Orientation="Vertical">
            <Grid
                Margin="0,8"
                ColumnSpacing="16"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                    <RowDefinition Height="{StaticResource ListItemHeight}" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Margin="16,12,16,0"
                    Style="{StaticResource ListGroupHeaderLabelStyle}"
                    Text="Sync" />
                <svg:SvgCachedImage
                    Grid.Row="1"
                    Grid.Column="0"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                    Source="dropbox.svg"
                    VerticalOptions="Center"
                    WidthRequest="24">
                    <svg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SyncToggleCommand}" />
                    </svg:SvgCachedImage.GestureRecognizers>
                </svg:SvgCachedImage>
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Dropbox" />
                <Switch
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="16,0"
                    IsToggled="{Binding DropboxEnabled}"
                    OnColor="{StaticResource PrimaryColor}"
                    VerticalOptions="CenterAndExpand">
                    <Switch.Behaviors>
                        <b:EventToCommandBehavior Command="{Binding SyncToggleCommand}" EventName="Toggled" />
                    </Switch.Behaviors>
                </Switch>
                <Label
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="16,12,16,0"
                    Style="{StaticResource ListGroupHeaderLabelStyle}"
                    Text="Deleted" />
                <svg:SvgCachedImage
                    Grid.Row="3"
                    Grid.Column="0"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                    Source="envelopegroup.svg"
                    VerticalOptions="Center"
                    WidthRequest="24">
                    <svg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopeGroupsPage" />
                    </svg:SvgCachedImage.GestureRecognizers>
                </svg:SvgCachedImage>
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Envelope Groups">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopeGroupsPage" />
                    </Label.GestureRecognizers>
                </Label>
                <svg:SvgCachedImage
                    Grid.Row="4"
                    Grid.Column="0"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                    Source="envelope.svg"
                    VerticalOptions="Center"
                    WidthRequest="24">
                    <svg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopesPage" />
                    </svg:SvgCachedImage.GestureRecognizers>
                </svg:SvgCachedImage>
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Envelopes">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopesPage" />
                    </Label.GestureRecognizers>
                </Label>
                <svg:SvgCachedImage
                    Grid.Row="5"
                    Grid.Column="0"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                    Source="account.svg"
                    VerticalOptions="Center"
                    WidthRequest="24">
                    <svg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedAccountsPage" />
                    </svg:SvgCachedImage.GestureRecognizers>
                </svg:SvgCachedImage>
                <Label
                    Grid.Row="5"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Accounts">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedAccountsPage" />
                    </Label.GestureRecognizers>
                </Label>
                <svg:SvgCachedImage
                    Grid.Row="6"
                    Grid.Column="0"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                    Source="payees.svg"
                    VerticalOptions="Center"
                    WidthRequest="24">
                    <svg:SvgCachedImage.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedPayeesPage" />
                    </svg:SvgCachedImage.GestureRecognizers>
                </svg:SvgCachedImage>
                <Label
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Payees">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedPayeesPage" />
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Grid.Row="7"
                    Grid.ColumnSpan="3"
                    Margin="16,12,16,0"
                    Style="{StaticResource ListGroupHeaderLabelStyle}"
                    Text="Purchases"/>
                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="16,0"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Thanks for purchasing Budget Badger Pro!"
                    IsVisible="{Binding HasPro}">
                </Label>
                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="16,0"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Upgrade your budget - Go Pro!"
                    IsVisible="{Binding DoesNotHavePro}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PurchaseProCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Grid.Row="9"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="16,0"
                    Style="{StaticResource ListItemLabelStyle}"
                    Text="Restore Purchase"
                    IsVisible="{Binding DoesNotHavePro}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RestoreProCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
        </ScrollView>
    </p:BasePage.Body>
</p:BasePage>
