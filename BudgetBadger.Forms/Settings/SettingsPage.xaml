<?xml version="1.0" encoding="UTF-8" ?>
<p:BasePage
    x:Class="BudgetBadger.Forms.Settings.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:p="clr-namespace:BudgetBadger.Forms.Pages"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls">
    <p:BasePage.Header>
        <p:RootHeader PageTitle="Settings" />
    </p:BasePage.Header>
    <p:BasePage.Body>
        <uc:BusyIndicator BusyText="{Binding BusyText}" IsBusy="{Binding IsBusy}">
            <ScrollView
                Margin="0"
                Padding="0"
                Orientation="Vertical">
                <Grid
                    Margin="0,8"
                    ColumnSpacing="16"
                    RowSpacing="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                        <RowDefinition Height="{StaticResource ListDoubleItemHeight}" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListGroupHeaderHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                        <RowDefinition Height="{StaticResource ListItemHeight}" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Margin="16,12,16,0"
                        Style="{StaticResource ListGroupHeaderLabelStyle}"
                        Text="Budget Badger Pro" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        IsVisible="{Binding HasPro}"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Thanks for purchasing Budget Badger Pro!" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Upgrade your budget - Go Pro!">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding PurchaseProCommand}" />
                        </Label.GestureRecognizers>
                        <Label.Triggers>
                            <DataTrigger
                                Binding="{Binding HasPro}"
                                TargetType="Label"
                                Value="true">
                                <Setter Property="IsVisible" Value="false" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Restore Purchase">
                        <Label.IsVisible>
                            <OnPlatform x:TypeArguments="x:Boolean" Default="true">
                                <On Platform="macOS" Value="false" />
                            </OnPlatform>
                        </Label.IsVisible>
                        <Label.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double" Default="{StaticResource ListItemHeight}">
                                <On Platform="macOS" Value="0" />
                            </OnPlatform>
                        </Label.HeightRequest>
                        <Label.Triggers>
                            <DataTrigger
                                Binding="{Binding HasPro}"
                                TargetType="Label"
                                Value="true">
                                <Setter Property="IsVisible" Value="false" />
                                <Setter Property="HeightRequest" Value="0" />
                            </DataTrigger>
                        </Label.Triggers>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RestoreProCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label
                        Grid.Row="3"
                        Grid.ColumnSpan="3"
                        Margin="16,12,16,0"
                        Style="{StaticResource ListGroupHeaderLabelStyle}"
                        Text="Cloud Sync" />
                    <svg:SvgCachedImage
                        Grid.Row="4"
                        Grid.Column="0"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                        Source="dropbox.svg"
                        VerticalOptions="Center"
                        WidthRequest="24">
                        <svg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SyncToggleCommand}" />
                        </svg:SvgCachedImage.GestureRecognizers>
                    </svg:SvgCachedImage>
                    <Grid
                        Grid.Row="4"
                        Grid.Column="1"
                        RowSpacing="4">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                            Text="Dropbox"
                            VerticalOptions="End" />
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource Key=ListDoubleSubItemLabelStyle}"
                            VerticalOptions="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Last synced: " />
                                    <Span Text="{Binding LastSynced}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>
                    <Switch
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="16,0"
                        IsToggled="{Binding DropboxEnabled}"
                        OnColor="{StaticResource PrimaryColor}"
                        VerticalOptions="CenterAndExpand">
                        <Switch.Behaviors>
                            <b:EventToCommandBehavior Command="{Binding SyncToggleCommand}" EventName="Toggled" />
                        </Switch.Behaviors>
                    </Switch>
                    <uc:Button2
                        Grid.Row="5"
                        Grid.Column="1"
                        Command="{Binding SyncCommand}"
                        HorizontalOptions="Start"
                        IsVisible="{Binding ShowSync}"
                        Style="{StaticResource SecondaryActionButtonStyle}"
                        Text="Sync" />
                    <Label
                        Grid.Row="6"
                        Grid.ColumnSpan="3"
                        Margin="16,12,16,0"
                        Style="{StaticResource ListGroupHeaderLabelStyle}"
                        Text="Deleted" />
                    <svg:SvgCachedImage
                        Grid.Row="7"
                        Grid.Column="0"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                        Source="envelopegroup.svg"
                        VerticalOptions="Center"
                        WidthRequest="24">
                        <svg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopeGroupsPage" />
                        </svg:SvgCachedImage.GestureRecognizers>
                    </svg:SvgCachedImage>
                    <Label
                        Grid.Row="7"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Envelope Groups">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopeGroupsPage" />
                        </Label.GestureRecognizers>
                    </Label>
                    <svg:SvgCachedImage
                        Grid.Row="8"
                        Grid.Column="0"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                        Source="envelope.svg"
                        VerticalOptions="Center"
                        WidthRequest="24">
                        <svg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopesPage" />
                        </svg:SvgCachedImage.GestureRecognizers>
                    </svg:SvgCachedImage>
                    <Label
                        Grid.Row="8"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Envelopes">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedEnvelopesPage" />
                        </Label.GestureRecognizers>
                    </Label>
                    <svg:SvgCachedImage
                        Grid.Row="9"
                        Grid.Column="0"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                        Source="account.svg"
                        VerticalOptions="Center"
                        WidthRequest="24">
                        <svg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedAccountsPage" />
                        </svg:SvgCachedImage.GestureRecognizers>
                    </svg:SvgCachedImage>
                    <Label
                        Grid.Row="9"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Accounts">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedAccountsPage" />
                        </Label.GestureRecognizers>
                    </Label>
                    <svg:SvgCachedImage
                        Grid.Row="10"
                        Grid.Column="0"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                        Source="payees.svg"
                        VerticalOptions="Center"
                        WidthRequest="24">
                        <svg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedPayeesPage" />
                        </svg:SvgCachedImage.GestureRecognizers>
                    </svg:SvgCachedImage>
                    <Label
                        Grid.Row="10"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Payees">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowDeletedCommand}" CommandParameter="DeletedPayeesPage" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label
                        Grid.Row="11"
                        Grid.ColumnSpan="3"
                        Margin="16,12,16,0"
                        Style="{StaticResource ListGroupHeaderLabelStyle}"
                        Text="Language" />
                    <uc:DropdownSelector
                        Grid.Row="12"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Label="Currency" />

                    <uc:DropdownSelector
                        Grid.Row="13"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Label="Date &amp; Time" />
                    <Label
                        Grid.Row="14"
                        Grid.ColumnSpan="3"
                        Margin="16,12,16,0"
                        Style="{StaticResource ListGroupHeaderLabelStyle}"
                        Text="Help" />
                    <Label
                        Grid.Row="15"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="BudgetBadger.io">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding HelpCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label
                        Grid.Row="16"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="16,0"
                        Style="{StaticResource ListItemLabelStyle}"
                        Text="Support@BudgetBadger.io">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EmailCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </ScrollView>
        </uc:BusyIndicator>
    </p:BasePage.Body>
</p:BasePage>
