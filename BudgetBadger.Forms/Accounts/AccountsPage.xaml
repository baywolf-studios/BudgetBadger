<?xml version="1.0" encoding="UTF-8" ?>
<uc:RootSearchPage
    x:Class="BudgetBadger.Forms.Accounts.AccountsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:data="clr-namespace:Syncfusion.DataSource;assembly=Syncfusion.DataSource.Portable"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    xmlns:pulltoRefresh="clr-namespace:Syncfusion.SfPullToRefresh.XForms;assembly=Syncfusion.SfPullToRefresh.XForms"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Name="this"
    PageTitle="Accounts"
    SearchCommand="{Binding SearchCommand}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
    <uc:RootSearchPage.BodyContent>
        <uc:HelperControl
            HelperText="Add an Account using the + button"
            ImagePath="helperaccount.svg"
            ShowHelper="{Binding NoAccounts}">
            <Grid
                Margin="0"
                BackgroundColor="{StaticResource BackgroundColor}"
                ColumnSpacing="16"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Margin="16"
                    ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="Net Worth"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        HorizontalTextAlignment="End"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="{Binding NetWorth, StringFormat='{0:c}'}"
                        VerticalTextAlignment="Center" />
                </Grid>
                <BoxView
                    Grid.Row="1"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <pulltoRefresh:SfPullToRefresh
                    Grid.Row="2"
                    IsRefreshing="{Binding IsBusy}"
                    ProgressBackgroundColor="{StaticResource BusyIndicatorBackgroundColor}"
                    ProgressStrokeColor="{StaticResource BusyIndicatorColor}">
                    <pulltoRefresh:SfPullToRefresh.Behaviors>
                        <b:EventToCommandBehavior Command="{Binding RefreshCommand}" EventName="Refreshing" />
                    </pulltoRefresh:SfPullToRefresh.Behaviors>
                    <pulltoRefresh:SfPullToRefresh.PullableContent>
                        <uc:ListView
                            AllowSwiping="true"
                            Filter="{Binding Filter}"
                            FilterText="{Binding SearchText}"
                            FooterSize="{StaticResource Key=FooterHiddenButtonHeight}"
                            GroupHeaderSize="{StaticResource ListGroupHeaderHeight}"
                            IsStickyFooter="True"
                            ItemSize="{StaticResource ListItemHeight}"
                            ItemsSource="{Binding Accounts}"
                            SelectedItem="{Binding SelectedAccount}">
                            <syncfusion:SfListView.Behaviors>
                                <b:EventToCommandBehavior Command="{Binding SelectedCommand}" EventName="SelectionChanged" />
                            </syncfusion:SfListView.Behaviors>
                            <syncfusion:SfListView.RightSwipeTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <ContentView Grid.Column="0" BackgroundColor="{StaticResource DataGridContextActionBackgroundColor}">
                                            <ContentView.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=this}}" CommandParameter="{Binding .}" />
                                            </ContentView.GestureRecognizers>
                                            <svg:SvgCachedImage
                                                HeightRequest="24"
                                                HorizontalOptions="Center"
                                                ReplaceStringMap="{Binding Source={StaticResource DataGridContextActionTextColor}, Converter={StaticResource ReplaceColorMap}}"
                                                Source="edit.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="24" />
                                        </ContentView>
                                        <ContentView Grid.Column="1" BackgroundColor="{StaticResource DataGridContextActionDestructionBackgroundColor}">
                                            <ContentView.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=this}}" CommandParameter="{Binding .}" />
                                            </ContentView.GestureRecognizers>
                                            <svg:SvgCachedImage
                                                HeightRequest="24"
                                                HorizontalOptions="Center"
                                                ReplaceStringMap="{Binding Source={StaticResource DataGridContextActionTextColor}, Converter={StaticResource ReplaceColorMap}}"
                                                Source="delete.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="24" />
                                        </ContentView>
                                    </Grid>
                                </DataTemplate>
                            </syncfusion:SfListView.RightSwipeTemplate>
                            <syncfusion:SfListView.DataSource>
                                <data:DataSource>
                                    <data:DataSource.SortDescriptors>
                                        <data:SortDescriptor Direction="Ascending" PropertyName="Type" />
                                        <data:SortDescriptor Direction="Ascending" PropertyName="Description" />
                                    </data:DataSource.SortDescriptors>
                                    <data:DataSource.GroupDescriptors>
                                        <data:GroupDescriptor PropertyName="Type" />
                                    </data:DataSource.GroupDescriptors>
                                </data:DataSource>
                            </syncfusion:SfListView.DataSource>
                            <syncfusion:SfListView.GroupHeaderTemplate>
                                <DataTemplate>
                                    <dt:GroupHeaderViewCell />
                                </DataTemplate>
                            </syncfusion:SfListView.GroupHeaderTemplate>
                            <syncfusion:SfListView.ItemTemplate>
                                <DataTemplate>
                                    <ContentView
                                        x:Name="groupHeaderCell"
                                        BackgroundColor="{StaticResource BackgroundColor}"
                                        HeightRequest="{StaticResource Key=ListGroupHeaderHeight}">
                                        <Label
                                            Margin="16,12,16,0"
                                            Style="{StaticResource Key=ListGroupHeaderLabelStyle}"
                                            Text="{Binding Key}" />
                                    </ContentView>
                                </DataTemplate>
                            </syncfusion:SfListView.ItemTemplate>
                            <syncfusion:SfListView.FooterTemplate>
                                <DataTemplate>
                                    <BoxView BackgroundColor="{StaticResource BackgroundColor}" />
                                </DataTemplate>
                            </syncfusion:SfListView.FooterTemplate>
                        </uc:ListView>
                    </pulltoRefresh:SfPullToRefresh.PullableContent>
                </pulltoRefresh:SfPullToRefresh>
                <Button
                    x:Name="NewTransactionButton"
                    Grid.Row="2"
                    Margin="16,0,16,16"
                    Command="{Binding AddTransactionCommand}"
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Text="Add Transaction"
                    VerticalOptions="End" />
            </Grid>
        </uc:HelperControl>
    </uc:RootSearchPage.BodyContent>
</uc:RootSearchPage>