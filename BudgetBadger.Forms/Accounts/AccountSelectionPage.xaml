<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Accounts" xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Accounts.AccountSelectionPage">
    <ContentPage.Content>
        <ListView x:Name="AccountList" BackgroundColor="White" SeparatorVisibility="None" IsPullToRefreshEnabled="true" IsRefreshing="{Binding IsBusy}" RefreshCommand="{Binding RefreshCommand}" ItemsSource="{Binding GroupedAccounts}" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" IsGroupingEnabled="true" GroupDisplayBinding="{Binding Key}">
            <ListView.Header>
                <SearchBar SearchCommand="{Binding SearchCommand}" Placeholder="Search" Text="{Binding SearchText}">
                    <SearchBar.Behaviors>
                        <b:EventToCommandBehavior EventName="TextChanged" Command="{Binding SearchCommand}" />
                    </SearchBar.Behaviors>
                </SearchBar>
            </ListView.Header>
            <ListView.Behaviors>
                <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
            </ListView.Behaviors>
            <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <StackLayout BackgroundColor="White">
                            <Label
                                HeightRequest="32"
                                FontSize="14"
                                FontFamily="{StaticResource FontFamilyMedium}"
                                VerticalTextAlignment="Center"
                                TextColor="{StaticResource ListViewGroupTextColor}"
                                Text="{Binding Key}"
                                Margin="16, 8"/>
                                </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <Grid RowSpacing="0" ColumnSpacing="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label
                                    Margin="16, 8"
                                    Grid.Column="0"
                                    Text="{Binding Description}"
                                    HeightRequest="32"
                                    FontSize="16"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                                <Label 
                                    Margin="16, 8"
                                    Grid.Column="1" 
                                    Text="{Binding Balance, StringFormat='{0:C}'}"
                                    HeightRequest="32"
                                    FontSize="16"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="End"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
