<?xml version="1.0" encoding="utf-8" ?>
<uc:RootSearchPage
    x:Class="BudgetBadger.Forms.Accounts.AccountsDetailedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:syncfusion="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    PageTitle="Accounts"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
    <uc:RootSearchPage.BodyContent>
        <uc:HelperControl
            HelperText="Add an Account using the + button"
            ImagePath="helperaccount.svg"
            ShowHelper="{Binding NoAccounts}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <uc:DataGrid
                    Grid.Row="0"
                    Margin="16,0"
                    AllowPullToRefresh="True"
                    ColumnSizer="Star"
                    Filter="{Binding Filter}"
                    FilterText="{Binding SearchText}"
                    GroupCaptionTextFormat="Type: {Key}"
                    IsBusy="{Binding IsBusy}"
                    ItemsSource="{Binding Accounts, Mode=TwoWay}"
                    PullToRefreshCommand="{Binding RefreshCommand}"
                    SelectedItem="{Binding SelectedAccount, Mode=TwoWay}">
                    <syncfusion:SfDataGrid.Behaviors>
                        <b:EventToCommandBehavior Command="{Binding SelectedCommand}" EventName="SelectionChanged" />
                    </syncfusion:SfDataGrid.Behaviors>
                    <syncfusion:SfDataGrid.GroupColumnDescriptions>
                        <syncfusion:GroupColumnDescription ColumnName="Type" />
                    </syncfusion:SfDataGrid.GroupColumnDescriptions>
                    <syncfusion:SfDataGrid.Columns x:TypeArguments="syncfusion:Columns">
                        <syncfusion:GridTextColumn
                            CellTextSize="{StaticResource ListItemFontSize}"
                            HeaderCellTextSize="{StaticResource ListHeaderFontSize}"
                            HeaderText="Name"
                            HeaderTextAlignment="Start"
                            MappingName="Description"
                            TextAlignment="Start" />
                        <syncfusion:GridTextColumn
                            CellTextSize="{StaticResource ListItemFontSize}"
                            Format="c"
                            HeaderCellTextSize="{StaticResource ListHeaderFontSize}"
                            HeaderText="Pending"
                            HeaderTextAlignment="End"
                            MappingName="Pending"
                            TextAlignment="End" />
                        <syncfusion:GridTextColumn
                            CellTextSize="{StaticResource ListItemFontSize}"
                            Format="c"
                            HeaderCellTextSize="{StaticResource ListHeaderFontSize}"
                            HeaderText="Posted"
                            HeaderTextAlignment="End"
                            MappingName="Posted"
                            TextAlignment="End" />
                        <syncfusion:GridTextColumn
                            CellTextSize="{StaticResource ListItemFontSize}"
                            Format="c"
                            HeaderCellTextSize="{StaticResource ListHeaderFontSize}"
                            HeaderText="Balance"
                            HeaderTextAlignment="End"
                            MappingName="Balance"
                            TextAlignment="End" />
                    </syncfusion:SfDataGrid.Columns>
                </uc:DataGrid>
                <BoxView
                    Grid.Row="1"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <Grid
                    Grid.Row="2"
                    Margin="16"
                    ColumnSpacing="16">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="Net Worth"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="{Binding NetWorth, StringFormat='{0:c}'}"
                        VerticalTextAlignment="Center" />
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Command="{Binding AddTransactionCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Text="Add Transaction"
                        VerticalOptions="Center" />
                </Grid>
            </Grid>
        </uc:HelperControl>
    </uc:RootSearchPage.BodyContent>
</uc:RootSearchPage>