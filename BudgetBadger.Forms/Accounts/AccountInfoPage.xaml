<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding Account.Description}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Accounts.AccountInfoPage">
	<ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="Pending" />
                    <Label Text="{Binding PendingTotal, StringFormat='{0:c}'}" />
                </StackLayout>
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="+" />
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="Posted" />
                    <Label Text="{Binding PostedTotal, StringFormat='{0:c}'}" />
                </StackLayout>
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="=" />
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="Balance" />
                    <Label Text="{Binding TransactionsTotal, StringFormat='{0:c}'}" />
                </StackLayout>
            </StackLayout>
            <Button IsVisible="{Binding Account.PaymentRequired}" Command="{Binding PaymentCommand}" Text="{Binding Account.Payment, StringFormat='Payment: {0:c}'}"/>
            <ListView IsPullToRefreshEnabled="true" IsRefreshing="{Binding IsBusy, Mode=OneWay}" RefreshCommand="{Binding RefreshCommand}" ItemsSource="{Binding GroupedTransactions}" SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}" IsGroupingEnabled="true" GroupDisplayBinding="{Binding Key}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding TransactionSelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Header>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="0" Text="Payee" />
                        <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="1" Text="Envelope" />
                        <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="2" Text="Amount" />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<TextCell Text="{Binding Amount, StringFormat='{0:c}'}" Detail="{Binding Payee.Description}"/>-->
                        <ViewCell>
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="0" Text="{Binding Payee.Description, StringFormat='{0}'}" />
                                <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="1" Text="{Binding Envelope.Description, StringFormat='{0}'}" />
                                <Label LineBreakMode="TailTruncation" FontSize="Small" Grid.Column="2" Text="{Binding Amount, StringFormat='{0:c}'}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Command="{Binding NewTransactionCommand}" Text="New Transaction"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
