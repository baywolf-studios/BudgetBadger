<?xml version="1.0" encoding="UTF-8" ?>
<uc:ChildSearchPage
    x:Class="BudgetBadger.Forms.Accounts.AccountInfoPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Name="this"
    PageTitle="{Binding Account.Description}"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}"
    ToolbarItemCommand="{Binding EditCommand}"
    ToolbarItemIcon="edit.svg"
    ToolbarItemText="Edit">
    <uc:ChildSearchPage.BodyContent>
        <Grid
            Margin="0"
            BackgroundColor="{StaticResource BackgroundColor}"
            ColumnSpacing="16"
            RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <uc:Expander Grid.Row="0" Grid.ColumnSpan="2">
                <uc:Expander.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>true</OnIdiom.Phone>
                        <OnIdiom.Tablet>false</OnIdiom.Tablet>
                        <OnIdiom.Desktop>false</OnIdiom.Desktop>
                    </OnIdiom>
                </uc:Expander.IsVisible>
                <uc:Expander.HeaderContent>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            HorizontalTextAlignment="Start"
                            Style="{StaticResource PageHeaderLabelStyle}"
                            Text="Balance"
                            VerticalTextAlignment="Center" />
                        <Label
                            Grid.Column="1"
                            HorizontalTextAlignment="End"
                            Style="{StaticResource PageHeaderLabelStyle}"
                            Text="{Binding Account.Balance, StringFormat='{0:c}'}"
                            VerticalTextAlignment="Center" />
                    </Grid>
                </uc:Expander.HeaderContent>
                <uc:Expander.BodyContent>
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource PageSubheaderLabelStyle}"
                            Text="Pending" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource PageSubheaderLabelStyle}"
                            Text="{Binding PendingTotal, StringFormat='{0:c}'}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource PageSubheaderLabelStyle}"
                            Text="Cleared" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource PageSubheaderLabelStyle}"
                            Text="{Binding PostedTotal, StringFormat='{0:c}'}" />
                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            BorderWidth="2"
                            Command="{Binding PaymentCommand}">
                            <Button.BorderColor>
                                <OnPlatform x:TypeArguments="Color" Default="Transparent">
                                    <On Platform="macOS" Value="White" />
                                </OnPlatform>
                            </Button.BorderColor>
                        </Button>
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            HorizontalTextAlignment="Center"
                            InputTransparent="true"
                            Style="{StaticResource PageSubheaderLabelStyle}"
                            Text="Payment">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding Account.PaymentRequired}"
                                    TargetType="Label"
                                    Value="true">
                                    <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalTextAlignment="Center"
                            InputTransparent="true"
                            Style="{StaticResource PageSubheaderLabelStyle}">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding Account.PaymentRequired}"
                                    TargetType="Label"
                                    Value="false">
                                    <Setter Property="Text" Value="Not Needed" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding Account.PaymentRequired}"
                                    TargetType="Label"
                                    Value="true">
                                    <Setter Property="Text" Value="{Binding Account.Payment, StringFormat='{0:c}'}" />
                                    <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Grid>
                </uc:Expander.BodyContent>
            </uc:Expander>
            <BoxView
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="0"
                BackgroundColor="{StaticResource DividerColor}"
                HeightRequest="1" />
            <uc:HelperControl
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HelperText="No transactions yet"
                ImagePath="helpertransaction.svg"
                ShowHelper="{Binding NoTransactions}">
                <uc:HelperControl.Triggers>
                    <DataTrigger
                        Binding="{Binding NoTransactions}"
                        TargetType="uc:HelperControl"
                        Value="true">
                        <Setter Property="Margin" Value="0,0,0,56" />
                    </DataTrigger>
                </uc:HelperControl.Triggers>
                <ListView
                    BackgroundColor="{StaticResource BackgroundColor}"
                    GroupDisplayBinding="{Binding Key}"
                    HasUnevenRows="true"
                    IsGroupingEnabled="true"
                    IsPullToRefreshEnabled="true"
                    IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    ItemsSource="{Binding GroupedTransactions}"
                    RefreshCommand="{Binding RefreshCommand}"
                    SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                    SeparatorVisibility="None">
                    <ListView.Behaviors>
                        <b:EventToCommandBehavior Command="{Binding TransactionSelectedCommand}" EventName="ItemSelected" />
                    </ListView.Behaviors>
                    <ListView.Header>
                        <dt:TransactionColumnHeaders TransactionViewCellType="Account">
                            <dt:TransactionColumnHeaders.Triggers>
                                <Trigger TargetType="ContentView" Property="IsVisible" Value="False">
                                    <Setter Property="HeightRequest" Value="0" />
                                </Trigger>
                            </dt:TransactionColumnHeaders.Triggers>
                            <dt:TransactionColumnHeaders.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>false</OnIdiom.Phone>
                                    <OnIdiom.Desktop>true</OnIdiom.Desktop>
                                    <OnIdiom.Tablet>true</OnIdiom.Tablet>
                                </OnIdiom>
                            </dt:TransactionColumnHeaders.IsVisible>
                        </dt:TransactionColumnHeaders>
                    </ListView.Header>
                    <ListView.GroupHeaderTemplate>
                        <OnIdiom x:TypeArguments="DataTemplate">
                            <OnIdiom.Phone>
                                <DataTemplate>
                                    <dt:DenseGroupHeaderViewCell />
                                </DataTemplate>
                            </OnIdiom.Phone>
                            <OnIdiom.Tablet>
                                <DataTemplate>
                                    <ViewCell Height="0">
                                        <ContentView
                                            Margin="-1"
                                            Padding="1"
                                            BackgroundColor="{StaticResource BackgroundColor}"
                                            HeightRequest="1" />
                                    </ViewCell>
                                </DataTemplate>
                            </OnIdiom.Tablet>
                            <OnIdiom.Desktop>
                                <DataTemplate>
                                    <ViewCell Height="0">
                                        <ContentView
                                            Margin="-1"
                                            Padding="1"
                                            BackgroundColor="{StaticResource BackgroundColor}"
                                            HeightRequest="1" />
                                    </ViewCell>
                                </DataTemplate>
                            </OnIdiom.Desktop>
                        </OnIdiom>
                    </ListView.GroupHeaderTemplate>
                    <ListView.ItemTemplate>
                        <OnIdiom x:TypeArguments="DataTemplate">
                            <OnIdiom.Phone>
                                <DataTemplate>
                                    <dt:TransactionViewCell Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}" TransactionViewCellType="Account" />
                                </DataTemplate>
                            </OnIdiom.Phone>
                            <OnIdiom.Tablet>
                                <DataTemplate>
                                    <dt:TransactionDetailedViewCell Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}" TransactionViewCellType="Account" />
                                </DataTemplate>
                            </OnIdiom.Tablet>
                            <OnIdiom.Desktop>
                                <DataTemplate>
                                    <ViewCell Height="{StaticResource Key=ListItemHeight}">
                                        <ContentView
                                            Margin="-1"
                                            Padding="1"
                                            BackgroundColor="{StaticResource BackgroundColor}"
                                            HeightRequest="{StaticResource Key=ListItemHeight}">
                                            <Grid
                                                x:Name="transactionGrid"
                                                Margin="16,0"
                                                ColumnSpacing="16"
                                                HeightRequest="{StaticResource Key=ListItemHeight}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="{StaticResource Key=ListItemHeight}" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="48" />
                                                </Grid.ColumnDefinitions>
                                                <Label
                                                    x:Name="serviceDateLabel"
                                                    Grid.Column="0"
                                                    Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                                                    Text="{Binding ServiceDate, StringFormat='{0:d}'}"
                                                    VerticalTextAlignment="Center" />
                                                <Label
                                                    x:Name="payeeLabel"
                                                    Grid.Column="1"
                                                    Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                                                    Text="{Binding Payee.Description}"
                                                    VerticalTextAlignment="Center" />
                                                <Label
                                                    x:Name="envelopeLabel"
                                                    Grid.Column="2"
                                                    Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                                                    Text="{Binding Envelope.Description}"
                                                    VerticalTextAlignment="Center" />
                                                <Label
                                                    x:Name="amountLabel"
                                                    Grid.Column="3"
                                                    HorizontalTextAlignment="End"
                                                    Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                                                    Text="{Binding Amount, StringFormat='{0:C}'}"
                                                    VerticalTextAlignment="Center" />
                                                <svg:SvgCachedImage
                                                    x:Name="clearedImage"
                                                    Grid.Column="4"
                                                    HeightRequest="16"
                                                    HorizontalOptions="Center"
                                                    InputTransparent="true"
                                                    ReplaceStringMap="{Binding Source={StaticResource PrimaryTextColor}, Converter={StaticResource ReplaceColorMap}}"
                                                    VerticalOptions="Center"
                                                    WidthRequest="16">
                                                    <svg:SvgCachedImage.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding Pending}"
                                                            TargetType="svg:SvgCachedImage"
                                                            Value="true">
                                                            <Setter Property="Source" Value="pending.svg" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding Posted}"
                                                            TargetType="svg:SvgCachedImage"
                                                            Value="true">
                                                            <Setter Property="Source" Value="posted.svg" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding Reconciled}"
                                                            TargetType="svg:SvgCachedImage"
                                                            Value="true">
                                                            <Setter Property="Source" Value="reconciled.svg" />
                                                        </DataTrigger>
                                                    </svg:SvgCachedImage.Triggers>
                                                    <svg:SvgCachedImage.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}" CommandParameter="{Binding .}" />
                                                    </svg:SvgCachedImage.GestureRecognizers>
                                                </svg:SvgCachedImage>
                                            </Grid>
                                        </ContentView>
                                    </ViewCell>

                                </DataTemplate>
                            </OnIdiom.Desktop>
                        </OnIdiom>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                        <BoxView BackgroundColor="{StaticResource BackgroundColor}" HeightRequest="{StaticResource Key=FooterHiddenButtonHeight}" />
                    </ListView.Footer>
                </ListView>
            </uc:HelperControl>
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Margin="16,0,0,16"
                Command="{Binding ReconcileCommand}"
                Style="{StaticResource SecondaryActionButtonStyle}"
                Text="Reconcile"
                VerticalOptions="End">
                <Button.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>true</OnIdiom.Phone>
                        <OnIdiom.Tablet>false</OnIdiom.Tablet>
                        <OnIdiom.Desktop>false</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.IsVisible>
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,16,16"
                Command="{Binding AddTransactionCommand}"
                Style="{StaticResource PrimaryActionButtonStyle}"
                Text="Add Transaction"
                VerticalOptions="End">
                <Button.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>true</OnIdiom.Phone>
                        <OnIdiom.Tablet>false</OnIdiom.Tablet>
                        <OnIdiom.Desktop>false</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.IsVisible>
            </Button>
            <BoxView
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="0"
                BackgroundColor="{StaticResource DividerColor}"
                HeightRequest="1" />
            <Grid
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="16"
                ColumnSpacing="16"
                RowSpacing="8">
                <Grid.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>false</OnIdiom.Phone>
                        <OnIdiom.Tablet>true</OnIdiom.Tablet>
                        <OnIdiom.Desktop>true</OnIdiom.Desktop>
                    </OnIdiom>
                </Grid.IsVisible>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource PageHeaderLabelStyle}"
                    Text="Balance"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource PageHeaderLabelStyle}"
                    Text="{Binding Account.Balance, StringFormat='{0:c}'}"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    Text="Pending"
                    VerticalOptions="End" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    Text="{Binding PendingTotal, StringFormat='{0:c}'}"
                    VerticalOptions="Start" />
                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    Text="Posted"
                    VerticalOptions="End" />
                <Label
                    Grid.Row="1"
                    Grid.Column="3"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    Text="{Binding PostedTotal, StringFormat='{0:c}'}"
                    VerticalOptions="Start" />
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="4"
                    BackgroundColor="Transparent"
                    BorderWidth="2"
                    Command="{Binding PaymentCommand}">
                    <Button.BorderColor>
                        <OnPlatform x:TypeArguments="Color" Default="Transparent">
                            <On Platform="macOS" Value="White" />
                        </OnPlatform>
                    </Button.BorderColor>
                </Button>
                <Label
                    Grid.Row="0"
                    Grid.Column="4"
                    HorizontalTextAlignment="Center"
                    InputTransparent="true"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    Text="Payment"
                    VerticalOptions="End">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding Account.PaymentRequired}"
                            TargetType="Label"
                            Value="true">
                            <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label
                    Grid.Row="1"
                    Grid.Column="4"
                    HorizontalTextAlignment="Center"
                    InputTransparent="true"
                    Style="{StaticResource PageSubheaderLabelStyle}"
                    VerticalOptions="Start">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding Account.PaymentRequired}"
                            TargetType="Label"
                            Value="false">
                            <Setter Property="Text" Value="Not Needed" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding Account.PaymentRequired}"
                            TargetType="Label"
                            Value="true">
                            <Setter Property="Text" Value="{Binding Account.Payment, StringFormat='{0:c}'}" />
                            <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="6"
                    Command="{Binding ReconcileCommand}"
                    HorizontalOptions="EndAndExpand"
                    Style="{StaticResource SecondaryActionButtonStyle}"
                    Text="Reconcile"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="7"
                    Command="{Binding AddTransactionCommand}"
                    HorizontalOptions="EndAndExpand"
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Text="Add Transaction"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>
    </uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
