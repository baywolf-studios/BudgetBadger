<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="BudgetBadger.Forms.Views.MainDesktopPage"
    Title="Default"
    IsPresented="true">
    <MasterDetailPage.Master>
        <ContentPage Title="Default">
            <StackLayout Spacing="8" Margin="16,0" HorizontalOptions="FillAndExpand">
                <Label
                    Text="Budget Badger"
                    VerticalTextAlignment="Center"
                    HeightRequest="64"/>

                <Label
                    Text="Envelopes"
                    VerticalTextAlignment="Center"
                    HeightRequest="48">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="EnvelopesPage"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Text="Accounts"
                    VerticalTextAlignment="Center"
                    HeightRequest="48">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="AccountsPage"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Text="Payees"
                    VerticalTextAlignment="Center"
                    HeightRequest="48">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="PayeesPage"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Text="Reports"
                    VerticalTextAlignment="Center"
                    HeightRequest="48">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="ReportsPage"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    Text="Settings"
                    VerticalTextAlignment="Center"
                    HeightRequest="48">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="SettingsPage"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>
