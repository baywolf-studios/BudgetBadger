<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage
    x:Class="BudgetBadger.Forms.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:accounts="clr-namespace:BudgetBadger.Forms.Accounts"
    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects"
    xmlns:envelopes="clr-namespace:BudgetBadger.Forms.Envelopes"
    xmlns:ext="clr-namespace:BudgetBadger.Forms.Extensions"
    xmlns:local="clr-namespace:BudgetBadger.Forms.Views"
    xmlns:payees="clr-namespace:BudgetBadger.Forms.Payees"
    xmlns:reports="clr-namespace:BudgetBadger.Forms.Reports"
    xmlns:settings="clr-namespace:BudgetBadger.Forms.Settings"
    xmlns:transactions="clr-namespace:BudgetBadger.Forms.Transactions"
    android:TabbedPage.ToolbarPlacement="Bottom"
    BarBackgroundColor="{StaticResource BackgroundColor}"
    SelectedTabColor="{StaticResource AppBarColor}">
    <TabbedPage.Effects>
        <effects:BottomBarNoShiftEffect />
    </TabbedPage.Effects>
    <TabbedPage.Children>
        <NavigationPage
            Title="{ext:Translate EnvelopesPageTitle}"
            BarTextColor="White">
            <NavigationPage.IconImageSource>
                <FontImageSource Glyph="{StaticResource EnvelopeIcon}" FontFamily="{StaticResource IconFontFamily}"/>
            </NavigationPage.IconImageSource>
            <x:Arguments>
                <envelopes:EnvelopesPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage
            Title="{ext:Translate AccountsPageTitle}"
            BarTextColor="White">
            <NavigationPage.IconImageSource>
                <FontImageSource Glyph="{StaticResource BankIcon}" FontFamily="{StaticResource IconFontFamily}"/>
            </NavigationPage.IconImageSource>
            <x:Arguments>
                <accounts:AccountsPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage
            Title="{ext:Translate PayeesPageTitle}"
            BarTextColor="White">
            <NavigationPage.IconImageSource>
                <FontImageSource Glyph="{StaticResource PayeesIcon}" FontFamily="{StaticResource IconFontFamily}"/>
            </NavigationPage.IconImageSource>
            <x:Arguments>
                <payees:PayeesPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage
            Title="{ext:Translate ReportsPageTitle}"
            BarTextColor="White">
            <NavigationPage.IconImageSource>
                <FontImageSource Glyph="{StaticResource ChartIcon}" FontFamily="{StaticResource IconFontFamily}"/>
            </NavigationPage.IconImageSource>
            <x:Arguments>
                <reports:ReportsPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage
            Title="{ext:Translate SettingsPageTitle}"
            BarTextColor="White">
            <NavigationPage.IconImageSource>
                <FontImageSource Glyph="{StaticResource SettingsIcon}" FontFamily="{StaticResource IconFontFamily}"/>
            </NavigationPage.IconImageSource>
            <x:Arguments>
                <settings:SettingsPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>