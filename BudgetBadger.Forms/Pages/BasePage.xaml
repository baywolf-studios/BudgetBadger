<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects"
    NavigationPage.HasBackButton="false"
    NavigationPage.HasNavigationBar="false"
    x:Class="BudgetBadger.Forms.Pages.BasePage"
    BackgroundColor="#dde3ed">
    <ContentPage.Effects>
        <effects:StatusBarPaddingEffect />         
    </ContentPage.Effects>
    <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ContentView
                x:Name="HeaderView"
                HeightRequest="{StaticResource AppBarPortraitHeight}"
                BackgroundColor="{StaticResource AppBarColor}"
                Grid.Row="0"/>
            <Frame HasShadow="true"
                   Grid.Row="1"
                   Padding="0"
                   Margin="0"
                   HorizontalOptions="Center"
                   WidthRequest="{StaticResource MaxWidth}"
                   x:Name="BodyFrame">
                <ContentView
                    x:Name="BodyView"
                    BackgroundColor="{StaticResource BackgroundColor}"/>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
