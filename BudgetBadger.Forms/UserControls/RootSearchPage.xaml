<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BudgetBadger.Forms.UserControls.RootSearchPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{StaticResource BackgroundColor}">
    <NavigationPage.TitleView>
        <Grid 
            ColumnSpacing="0"
            RowSpacing="0"
            Margin="{StaticResource HeaderMargin}"
            x:Name="HeaderGrid"
            BackgroundColor="{StaticResource AppBarColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource AppBarGridSize}" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource AppBarIconGridWidth}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="{StaticResource AppBarIconGridWidth}" />
            </Grid.ColumnDefinitions>
            <BoxView
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                BackgroundColor="{StaticResource AppBarColor}" />
            <Label
                x:Name="LabelControl"
                Grid.Row="0"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="17"
                LineBreakMode="TailTruncation"
                Text="{Binding PageTitle}"
                TextColor="White"
                VerticalOptions="Center">
                <Label.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android" Value="16,0,0,0" />
                        <On Platform="UWP" Value="16,0,0,0" />
                        <On Platform="iOS" Value="0" />
                        <On Platform="macOS" Value="0" />
                    </OnPlatform>
                </Label.Margin>
                <Label.HorizontalOptions>
                    <OnPlatform x:TypeArguments="LayoutOptions">
                        <On Platform="Android" Value="Start" />
                        <On Platform="UWP" Value="Start" />
                        <On Platform="iOS" Value="Center" />
                        <On Platform="macOS" Value="Center" />
                    </OnPlatform>
                </Label.HorizontalOptions>
            </Label>
            <ContentView
                x:Name="ToolbarItemFrame"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0"
                Padding="0"
                BackgroundColor="{StaticResource AppBarColor}">
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToolbarItemCommand}" />
                </ContentView.GestureRecognizers>
                <svg:SvgCachedImage
                    x:Name="ToolbarItemImage"
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    ReplaceStringMap="{Binding ReplaceColor}"
                    Source="{Binding ToolbarItemIcon}"
                    VerticalOptions="Center"
                    WidthRequest="24" />
            </ContentView>
            <ContentView
                x:Name="SearchBoxFrame"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Padding="0"
                BackgroundColor="{StaticResource AppBarColor}"
                IsVisible="false"
                TranslationX="{Binding Source={x:Reference SearchBoxFrame}, Path=Width}">
                <ContentView
                    x:Name="EntryFrame"
                    Margin="16,8,8,8"
                    Padding="0">
                    <ContentView.BackgroundColor>
                        <Color x:FactoryMethod="FromRgba">
                            <x:Arguments>
                                <x:Int32>0</x:Int32>
                                <x:Int32>0</x:Int32>
                                <x:Int32>0</x:Int32>
                                <x:Int32>31</x:Int32>
                            </x:Arguments>
                        </Color>
                    </ContentView.BackgroundColor>
                    <Entry
                        x:Name="EntryControl"
                        Margin="8,0"
                        BackgroundColor="Transparent"
                        FontSize="17"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding SearchText}"
                        TextColor="White"
                        VerticalOptions="Center">
                        <Entry.Keyboard>
                            <Keyboard x:FactoryMethod="Create">
                                <x:Arguments>
                                    <KeyboardFlags>Spellcheck,Suggestions,CapitalizeWord</KeyboardFlags>
                                </x:Arguments>
                            </Keyboard>
                        </Entry.Keyboard>
                        <Entry.Effects>
                            <effects:BorderlessEntryEffect />
                        </Entry.Effects>
                    </Entry>
                </ContentView>
            </ContentView>
            <ContentView
                x:Name="SearchButtonFrame"
                Grid.Row="0"
                Grid.Column="2"
                Padding="0"
                BackgroundColor="{StaticResource AppBarColor}">
                <svg:SvgCachedImage
                    x:Name="svgSearch"
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    ReplaceStringMap="{Binding ReplaceColor}"
                    Source="search.svg"
                    VerticalOptions="Center"
                    WidthRequest="24" />
            </ContentView>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ContentView x:Name="BodyView"/>
    </ContentPage.Content>
</ContentPage>
