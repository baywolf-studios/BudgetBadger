<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    x:Class="BudgetBadger.Forms.UserControls.StepperPage"
    ios:Page.UseSafeArea="true"
    NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource AppBarIconSize}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource AppBarIconSize}"/>
                <ColumnDefinition Width="{StaticResource AppBarIconSize}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{StaticResource AppBarIconSize}"/>
                <ColumnDefinition Width="{StaticResource AppBarIconSize}"/>
            </Grid.ColumnDefinitions>
            <BoxView BackgroundColor="{StaticResource AppBarColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"/>
            <Label
                x:Name="LabelControl"
                TextColor="White"
                Grid.Column="2"
                Grid.Row="0"
                LineBreakMode="TailTruncation"
                VerticalOptions="Center"
                FontSize="17"
                FontFamily="{StaticResource FontFamilyMedium}"
                Text="{Binding Title}"
                Margin="0"
                HorizontalOptions="Center">
            </Label>
            <Frame
                x:Name="ToolbarItemFrame"
                Grid.Row="0"
                Grid.Column="0"
                HasShadow="false"
                Padding="0"
                Margin="0"
                CornerRadius="0"
                BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToolbarItemCommand}"/>
                </Frame.GestureRecognizers>
                <Image 
                    x:Name="ToolbarItemImage"
                    HeightRequest="24"
                    WidthRequest="24"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="Red"
                    Source="{Binding ToolbarItemIcon}"/>
            </Frame>
            <Frame
                x:Name="PreviousFrame"
                Grid.Row="0"
                Grid.Column="1"
                HasShadow="false"
                Padding="0"
                Margin="0"
                CornerRadius="0"
                BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PreviousCommand}"/>
                </Frame.GestureRecognizers>
                <Image 
                    x:Name="PreviousImage"
                    HeightRequest="24"
                    WidthRequest="24"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="Silver"
                    Source="{Binding PreviousIcon}"/>
            </Frame>
            <Frame
                x:Name="NextFrame"
                Grid.Row="0"
                Grid.Column="3"
                HasShadow="false"
                Padding="0"
                Margin="0"
                CornerRadius="0"
                BackgroundColor="Transparent">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NextCommand}"/>
                </Frame.GestureRecognizers>
                <Image 
                    x:Name="NextImage"
                    HeightRequest="24"
                    WidthRequest="24"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    BackgroundColor="Silver"
                    Source="{Binding NextIcon}"/>
            </Frame>
            <Frame
                x:Name="SearchBoxFrame"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                BackgroundColor="Teal"
                HasShadow="false"
                Padding="0"
                CornerRadius="0"
                TranslationX="{Binding Source={x:Reference SearchBoxFrame}, Path=Width}"
                IsVisible="false">
                <Frame
                    x:Name="EntryFrame"
                    Margin="8"
                    HasShadow="false"
                    Padding="0">
                    <Frame.BackgroundColor>
                        <Color x:FactoryMethod="FromRgba">
                          <x:Arguments>
                            <x:Int32>0</x:Int32>
                            <x:Int32>0</x:Int32>
                            <x:Int32>0</x:Int32>                      
                            <x:Int32>31</x:Int32>
                          </x:Arguments>
                        </Color>
                    </Frame.BackgroundColor>
                    <Entry
                        x:Name="EntryControl"
                        Margin="8,0"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand"
                        TextColor="White"
                        FontSize="17"
                        Text="{Binding SearchText}">
                        <Entry.Effects>
                            <effects:BorderlessEntryEffect/>
                        </Entry.Effects>
                    </Entry>
                </Frame>
            </Frame>
            <Frame
                x:Name="SearchButtonFrame"
                WidthRequest="{StaticResource AppBarHeight}"
                CornerRadius="0"
                HasShadow="false"
                Padding="0"
                HorizontalOptions="End"
                Grid.Row="0"
                Grid.Column="4"
                BackgroundColor="Red">
                <Image
                    HeightRequest="24"
                    WidthRequest="24"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Blue"/>
            </Frame>
            <ContentView x:Name="BodyView" Grid.Row="1" Grid.ColumnSpan="5"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
