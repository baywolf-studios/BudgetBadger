<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout
    HeightRequest="32"
    VerticalOptions="Start"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    x:Class="BudgetBadger.Forms.UserControls.Checkbox">
    <BoxView
        x:Name="BackgroundControl"
        AbsoluteLayout.LayoutBounds="0, 0, 32, 32">
        <BoxView.GestureRecognizers>
            <TapGestureRecognizer Tapped="Handle_Tapped" />
        </BoxView.GestureRecognizers>
    </BoxView>
    <svg:SvgCachedImage
        x:Name="UncheckedImage"
        AbsoluteLayout.LayoutBounds="0,4,24,24"
        InputTransparent="true"
        ReplaceStringMap="{Binding ReplaceColorUnchecked}"
        Source="uncheckedcheckbox.svg"/>
    <svg:SvgCachedImage
        x:Name="CheckedImage"
        AbsoluteLayout.LayoutBounds="0,4,24,24"
        InputTransparent="true"
        ReplaceStringMap="{Binding ReplaceColorChecked}"
        Source="checkedcheckbox.svg"/>
    <Label
        x:Name="LabelControl"
        AbsoluteLayout.LayoutBounds="32,0,1,32"
        AbsoluteLayout.LayoutFlags="YProportional, WidthProportional"
        FontSize="16"
        FontFamily="{StaticResource FontFamilyRegular}"
        Text="{Binding Label}"
        VerticalOptions="Center"/>
</AbsoluteLayout>
