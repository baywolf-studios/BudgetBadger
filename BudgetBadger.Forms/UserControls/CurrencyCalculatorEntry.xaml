<?xml version="1.0" encoding="UTF-8" ?>
<StackLayout
    x:Class="BudgetBadger.Forms.UserControls.CurrencyCalculatorEntry"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls">
    <StackLayout.Spacing>
        <OnPlatform x:TypeArguments="x:Double">
            <On Platform="UWP, macOS, iOS" Value="4" />
            <On Platform="Android" Value="0" />
        </OnPlatform>
    </StackLayout.Spacing>
    <Label
        x:Name="LabelControl"
        FontSize="12"
        Text="{Binding Label}"
        TextColor="{StaticResource IdleColor}" />
    <uc:CurrencyCalculator
        x:Name="TextControl"
        FontSize="16"
        TextColor="{StaticResource PrimaryTextColor}"
        Number="{Binding Number}">
    </uc:CurrencyCalculator>
    <Label
        x:Name="HintErrorControl"
        FontSize="12"
        IsVisible="false"/>
</StackLayout>