<?xml version="1.0" encoding="UTF-8" ?>
<StackLayout
    x:Class="BudgetBadger.Forms.UserControls.DateSelector"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Orientation="Vertical">
    <StackLayout.Spacing>
        <OnPlatform x:TypeArguments="x:Double">
            <On Platform="UWP, macOS, iOS" Value="4" />
            <On Platform="Android" Value="0" />
        </OnPlatform>
    </StackLayout.Spacing>
    <Label
        x:Name="LabelControl"
        FontSize="12"
        Text="{Binding Label}"
        TextColor="{StaticResource IdleColor}" />
    <DatePicker
        x:Name="DateControl"
        Date="{Binding Date}"
        TextColor="{StaticResource PrimaryTextColor}">
        <DatePicker.FontSize>
            <OnPlatform x:TypeArguments="x:Double" Default="16">
                <On Platform="macOS" Value="12" />
            </OnPlatform>
        </DatePicker.FontSize>
        <DatePicker.HorizontalOptions>
            <OnPlatform x:TypeArguments="LayoutOptions">
                <On Platform="Android, macOS, iOS" Value="Fill" />
                <On Platform="UWP" Value="Fill" />
            </OnPlatform>
        </DatePicker.HorizontalOptions>
    </DatePicker>
</StackLayout>
