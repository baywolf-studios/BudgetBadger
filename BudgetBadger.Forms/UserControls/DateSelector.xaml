<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout HeightRequest="48" VerticalOptions="Start" xmlns:effects="clr-namespace:BudgetBadger.Forms.Effects" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.UserControls.DateSelector">
    <Label
        x:Name="LabelControl"
        Text="{Binding Label}"
        FontSize="12"
        AbsoluteLayout.LayoutBounds="0,0,1,16"
        AbsoluteLayout.LayoutFlags="WidthProportional"
        InputTransparent="true"/>
    <DatePicker
        x:Name="DatePickerControl"
        Date="{Binding DateValue}"
        AbsoluteLayout.LayoutBounds="0,16,1,32"
        AbsoluteLayout.LayoutFlags="WidthProportional">
        <DatePicker.Effects>
            <effects:BorderlessDatePickerEffect/>
            <effects:FontSizeDatePickerEffect FontSize="16"/>
        </DatePicker.Effects>
    </DatePicker>
    <BoxView
        AbsoluteLayout.LayoutBounds="1,16,24,24"
        AbsoluteLayout.LayoutFlags="XProportional"
        BackgroundColor="Blue"
        InputTransparent="true"/>
    <BoxView
        AbsoluteLayout.LayoutBounds="0,47,1,1"
        AbsoluteLayout.LayoutFlags="WidthProportional"
        BackgroundColor="Black"
        InputTransparent="true"/>
    <BoxView
        AbsoluteLayout.LayoutBounds="0,46,2,1"
        AbsoluteLayout.LayoutFlags="WidthProportional"
        BackgroundColor="Black"
        InputTransparent="true"
        IsVisible="false"/>
</AbsoluteLayout>
