<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="BudgetBadger.Forms.UserControls.PullToRefresh"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:BudgetBadger.Forms.Converters"
    xmlns:ext="clr-namespace:BudgetBadger.Forms.Extensions"
    xmlns:sf="clr-namespace:Syncfusion.SfPullToRefresh.XForms;assembly=Syncfusion.SfPullToRefresh.XForms"
    x:Name="this">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="invertedBool" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid>
        <sf:SfPullToRefresh
            x:Name="sfPull"
            ProgressBackgroundColor="{StaticResource BusyIndicatorBackgroundColor}"
            ProgressStrokeColor="{StaticResource BusyIndicatorColor}" />
        <StackLayout
            x:Name="activityIndicator"
            HorizontalOptions="CenterAndExpand"
            Orientation="Vertical"
            Spacing="8"
            VerticalOptions="CenterAndExpand">
            <ActivityIndicator IsRunning="true" Color="{StaticResource BusyIndicatorBackgroundColor}" />
            <Label HorizontalOptions="Center" Text="{ext:Translate BusyTextLoading}" />
        </StackLayout>
    </Grid>
</ContentView>
