<?xml version="1.0" encoding="UTF-8" ?>
<uc:StepperPage
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Name="envelopesPage"
    NextCommand="{Binding NextCommand}"
    PageTitle="{Binding Schedule.Description}"
    PreviousCommand="{Binding PreviousCommand}"
    SearchCommand="{Binding SearchCommand}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
    <uc:StepperPage.BodyContent>
        <uc:HelperControl
            Grid.Row="2"
            HelperText="Add an Envelope using the + button"
            ImagePath="helperenvelope.svg"
            ShowHelper="{Binding NoEnvelopes}">
            <Grid
                Margin="0"
                BackgroundColor="{StaticResource BackgroundColor}"
                ColumnSpacing="16"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <uc:Expander Grid.Row="0">
                    <uc:Expander.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </uc:Expander.IsVisible>
                    <uc:Expander.HeaderContent>
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                HorizontalTextAlignment="Start"
                                Style="{StaticResource PageHeaderLabelStyle}"
                                Text="To Budget"
                                VerticalTextAlignment="Center" />
                            <Label
                                Grid.Column="1"
                                HorizontalTextAlignment="End"
                                Style="{StaticResource PageHeaderLabelStyle}"
                                Text="{Binding Schedule.Balance, StringFormat='{0:c}'}"
                                VerticalTextAlignment="Center" />
                        </Grid>
                    </uc:Expander.HeaderContent>
                    <uc:Expander.BodyContent>
                        <Grid ColumnSpacing="16" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Past" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Schedule.Past, StringFormat='{0:c}'}" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Income" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Schedule.Income, StringFormat='{0:c}'}" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="2"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Budgeted" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Schedule.Budgeted, StringFormat='{0:c}'}" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="3"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Over" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="3"
                                HorizontalTextAlignment="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Schedule.Overspend, StringFormat='{0:c}'}" />
                        </Grid>
                    </uc:Expander.BodyContent>
                </uc:Expander>
                <BoxView
                    Grid.Row="1"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <ListView
                    x:Name="envelopeList"
                    Grid.Row="2"
                    BackgroundColor="{StaticResource BackgroundColor}"
                    GroupDisplayBinding="{Binding Key}"
                    HasUnevenRows="true"
                    IsGroupingEnabled="true"
                    IsPullToRefreshEnabled="true"
                    IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    ItemsSource="{Binding GroupedBudgets}"
                    RefreshCommand="{Binding RefreshCommand}"
                    SelectedItem="{Binding SelectedBudget, Mode=TwoWay}"
                    SeparatorVisibility="None">
                    <ListView.Behaviors>
                        <b:EventToCommandBehavior Command="{Binding SelectedCommand}" EventName="ItemSelected" />
                    </ListView.Behaviors>
                    <ListView.Header>
                        <dt:EnvelopeColumnHeaders>
                            <dt:EnvelopeColumnHeaders.Triggers>
                                <Trigger TargetType="ContentView" Property="IsVisible" Value="False">
                                    <Setter Property="HeightRequest" Value="0" />
                                </Trigger>
                            </dt:EnvelopeColumnHeaders.Triggers>
                            <dt:EnvelopeColumnHeaders.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>false</OnIdiom.Phone>
                                    <OnIdiom.Desktop>true</OnIdiom.Desktop>
                                    <OnIdiom.Tablet>true</OnIdiom.Tablet>
                                </OnIdiom>
                            </dt:EnvelopeColumnHeaders.IsVisible>
                        </dt:EnvelopeColumnHeaders>
                    </ListView.Header>
                    <ListView.GroupHeaderTemplate>
                        <DataTemplate>
                            <dt:GroupHeaderViewCell />
                        </DataTemplate>
                    </ListView.GroupHeaderTemplate>
                    <ListView.ItemTemplate>
                        <OnIdiom x:TypeArguments="DataTemplate">
                            <OnIdiom.Phone>
                                <DataTemplate>
                                    <dt:EnvelopeViewCell>
                                        <dt:EnvelopeViewCell.ContextActions>
                                            <MenuItem
                                                Command="{Binding BindingContext.EditCommand, Source={x:Reference envelopeList}}"
                                                CommandParameter="{Binding .}"
                                                Text="Edit" />
                                            <MenuItem
                                                Command="{Binding BindingContext.DeleteCommand, Source={x:Reference envelopeList}}"
                                                CommandParameter="{Binding .}"
                                                IsDestructive="True"
                                                Text="Delete" />
                                        </dt:EnvelopeViewCell.ContextActions>
                                    </dt:EnvelopeViewCell>
                                </DataTemplate>
                            </OnIdiom.Phone>
                            <OnIdiom.Tablet>
                                <DataTemplate>
                                    <dt:EnvelopeDetailedViewCell>
                                        <dt:EnvelopeDetailedViewCell.ContextActions>
                                            <MenuItem
                                                Command="{Binding BindingContext.EditCommand, Source={x:Reference envelopeList}}"
                                                CommandParameter="{Binding .}"
                                                Text="Edit" />
                                            <MenuItem
                                                Command="{Binding BindingContext.DeleteCommand, Source={x:Reference envelopeList}}"
                                                CommandParameter="{Binding .}"
                                                IsDestructive="True"
                                                Text="Delete" />
                                        </dt:EnvelopeDetailedViewCell.ContextActions>
                                    </dt:EnvelopeDetailedViewCell>
                                </DataTemplate>
                            </OnIdiom.Tablet>
                            <OnIdiom.Desktop>
                                <DataTemplate>
                                    <dt:EnvelopeDetailedViewCell />
                                </DataTemplate>
                            </OnIdiom.Desktop>
                        </OnIdiom>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                        <BoxView BackgroundColor="{StaticResource BackgroundColor}" HeightRequest="{StaticResource Key=FooterHiddenButtonHeight}" />
                    </ListView.Footer>
                </ListView>
                <Button
                    x:Name="NewTransactionButton"
                    Grid.Row="2"
                    Margin="16,0,16,16"
                    Command="{Binding AddTransactionCommand}"
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Text="Add Transaction"
                    VerticalOptions="End">
                    <Button.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </Button.IsVisible>
                </Button>
                <BoxView
                    Grid.Row="3"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <Grid
                    Grid.Row="4"
                    Margin="16"
                    ColumnSpacing="16"
                    RowSpacing="8">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="To Budget"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="{Binding Schedule.Balance, StringFormat='{0:c}'}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Past"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Schedule.Past, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="3"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Income"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="3"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Schedule.Income, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="4"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Budgeted"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="4"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Schedule.Budgeted, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="5"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Over"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="5"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Schedule.Overspend, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="7"
                        Command="{Binding AddTransactionCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Text="Add Transaction"
                        VerticalOptions="Center" />
                </Grid>
            </Grid>
        </uc:HelperControl>
    </uc:StepperPage.BodyContent>
</uc:StepperPage>
