<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Envelopes" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Envelopes.EnvelopesPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Text="Add" Command="{Binding NewCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" IsVisible="{Binding NormalMode}">
                <Button Command="{Binding PreviousCommand}">
                    <Button.Text>
                        &lt;
                    </Button.Text>
                </Button>
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Text="{Binding Schedule.BeginDate, StringFormat='{0:Y}'}" />
                <Button Command="{Binding NextCommand}">
                    <Button.Text>
                        &gt;
                    </Button.Text>
                </Button>
            </StackLayout>
            <ListView IsPullToRefreshEnabled="true" IsRefreshing="{Binding IsBusy, Mode=OneWay}" RefreshCommand="{Binding RefreshCommand}" ItemsSource="{Binding GroupedBudgets}" SelectedItem="{Binding SelectedBudget, Mode=TwoWay}" IsGroupingEnabled="true" GroupDisplayBinding="{Binding DisplayName}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Header>
                    <StackLayout Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/> 
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <Label FontSize="Small" Text="Past" />
                                <Label FontSize="Small" Text="{Binding Past, StringFormat='{0:c}'}" />
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <Label FontSize="Small" Text="Income" />
                                <Label FontSize="Small" Text="{Binding Income, StringFormat='{0:c}'}" />
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="2" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <Label FontSize="Small" Text="Budgeted" />
                                <Label FontSize="Small" Text="{Binding Budgeted, StringFormat='{0:c}'}" />
                            </StackLayout>
                            <StackLayout Grid.Row="0" Grid.Column="3" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <Label FontSize="Small" Text="Over Spent" />
                                <Label FontSize="Small" Text="{Binding OverSpent, StringFormat='{0:c}'}" />
                            </StackLayout>
                            <StackLayout Grid.Row="1" Grid.ColumnSpan="4" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <Label FontSize="Small" Text="Available To Budget" />
                                <Label FontSize="Small" Text="{Binding AvailableToBudget, StringFormat='{0:c}'}" />
                            </StackLayout>
                        </Grid>
                        <SearchBar SearchCommand="{Binding SearchCommand}" Placeholder="Search" Text="{Binding SearchText}" />
                    </StackLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Envelope.Description}" Detail="{Binding Remaining, StringFormat='{0:C}'}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>