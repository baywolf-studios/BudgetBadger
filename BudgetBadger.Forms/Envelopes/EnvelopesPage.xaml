<?xml version="1.0" encoding="UTF-8"?>
<uc:StepperPage
    Title="{Binding Schedule.Description}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopesPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    SearchCommand="{Binding SearchCommand}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemText="New"
    ToolbarItemIcon="newicon.svg"
    NextCommand="{Binding NextCommand}"
    PreviousCommand="{Binding PreviousCommand}">
    <uc:StepperPage.BodyContent>
        <Grid
            BackgroundColor="White"
            Margin="0"
            ColumnSpacing="16"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <uc:Expander Grid.Row="0">
                <uc:Expander.HeaderContent>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="To Budget"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                        <Label
                            Grid.Column="1"
                            Text="{Binding Schedule.Balance, StringFormat='{0:c}'}"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="End"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                    </Grid>
                </uc:Expander.HeaderContent>
                <uc:Expander.BodyContent>
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Past"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                        FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding Schedule.Past, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="Income"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Schedule.Income, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Text="Budgeted"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding Schedule.Budgeted, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="3"
                            Text="Over"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="3"
                            Text="{Binding Schedule.Overspend, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                    </Grid>
                </uc:Expander.BodyContent>
            </uc:Expander>
            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <ListView
                x:Name="EnvelopeList"
                Grid.Row="2"
                BackgroundColor="White"
                SeparatorVisibility="None"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                ItemsSource="{Binding GroupedBudgets}"
                SelectedItem="{Binding SelectedBudget, Mode=TwoWay}"
                IsGroupingEnabled="true"
                GroupDisplayBinding="{Binding Key}"
                HasUnevenRows="true">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
                </ListView.Behaviors>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <StackLayout
                                BackgroundColor="{StaticResource BackgroundColor}"
                                Margin="-1"
                                Padding="1">
                                <Label
                                    HeightRequest="32"
                                    FontSize="{StaticResource ListGroupHeaderFontSize}"
                                    FontAttributes="Bold"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource ListGroupHeaderTextColor}"
                                    Text="{Binding Key}"
                                    Margin="16, 8"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <Grid
                                RowSpacing="0"
                                ColumnSpacing="0"
                                Margin="-1"
                                Padding="1"
                                BackgroundColor="{StaticResource BackgroundColor}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label
                                    Margin="16, 8"
                                    Grid.Column="0"
                                    Text="{Binding Envelope.Description}"
                                    HeightRequest="32"
                                    FontSize="{StaticResource ListItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                                <Label 
                                    Margin="16, 8"
                                    Grid.Column="1" 
                                    Text="{Binding Remaining, StringFormat='{0:C}'}"
                                    HeightRequest="32"
                                    FontSize="{StaticResource ListItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="End"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                            </Grid>
                            <ViewCell.ContextActions>
                                <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference EnvelopeList}}" CommandParameter="{Binding .}" Text="Edit" />
                                <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference EnvelopeList}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                            </ViewCell.ContextActions>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ContentView 
                        BackgroundColor="White"
                        HeightRequest="{Binding Source={x:Reference Name=NewTransactionButton}, Path=Height}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Grid.Row="2"
                Margin="16,0,16,8"
                FontFamily="{StaticResource FontFamilyMedium}"
                FontSize="14"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddTransactionCommand}"
                BackgroundColor="{StaticResource AppBarColor}"
                BorderColor="{StaticResource AppBarColor}"
                TextColor="White"
                HeightRequest="40"
                BorderWidth="2"
                BorderRadius="2">
                <Button.HorizontalOptions>
                    <OnIdiom x:TypeArguments="LayoutOptions">
                        <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
                        <OnIdiom.Tablet>EndAndExpand</OnIdiom.Tablet>
                        <OnIdiom.Desktop>EndAndExpand</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.HorizontalOptions>
            </Button>
        </Grid>
    </uc:StepperPage.BodyContent>
</uc:StepperPage>
