<?xml version="1.0" encoding="UTF-8"?>
<uc:StepperPage
    x:Name="envelopesPage"
    Title="{Binding Schedule.Description}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopesPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    SearchCommand="{Binding SearchCommand}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemText="New"
    ToolbarItemIcon="newicon.svg"
    NextCommand="{Binding NextCommand}"
    PreviousCommand="{Binding PreviousCommand}">
    <uc:StepperPage.BodyContent>
        <Grid
            BackgroundColor="White"
            Margin="0"
            ColumnSpacing="16"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <uc:Expander Grid.Row="0">
                <uc:Expander.HeaderContent>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="To Budget"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                        <Label
                            Grid.Column="1"
                            Text="{Binding Schedule.Balance, StringFormat='{0:c}'}"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="End"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                    </Grid>
                </uc:Expander.HeaderContent>
                <uc:Expander.BodyContent>
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Past"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                        FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding Schedule.Past, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="Income"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Schedule.Income, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Text="Budgeted"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding Schedule.Budgeted, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="3"
                            Text="Over"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="3"
                            Text="{Binding Schedule.Overspend, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                    </Grid>
                </uc:Expander.BodyContent>
            </uc:Expander>
            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <ListView
                x:Name="envelopeList"
                Grid.Row="2"
                BackgroundColor="{StaticResource BackgroundColor}"
                SeparatorVisibility="None"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                ItemsSource="{Binding GroupedBudgets}"
                SelectedItem="{Binding SelectedBudget, Mode=TwoWay}"
                IsGroupingEnabled="true"
                GroupDisplayBinding="{Binding Key}"
                HasUnevenRows="true">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Header>
                    <dt:EnvelopeColumnHeaders>
                        <dt:EnvelopeColumnHeaders.Triggers>
                            <Trigger TargetType="ContentView" Property="IsVisible" Value="False">
                                <Setter Property="HeightRequest" Value="0" />
                            </Trigger>
                        </dt:EnvelopeColumnHeaders.Triggers>
                        <dt:EnvelopeColumnHeaders.IsVisible>
                            <OnIdiom x:TypeArguments="x:Boolean">
                                <OnIdiom.Phone>false</OnIdiom.Phone>
                                <OnIdiom.Desktop>true</OnIdiom.Desktop>
                                <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            </OnIdiom>
                        </dt:EnvelopeColumnHeaders.IsVisible>
                    </dt:EnvelopeColumnHeaders>
                </ListView.Header>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <dt:GroupHeaderViewCell/>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <OnIdiom x:TypeArguments="DataTemplate">
                        <OnIdiom.Phone>
                            <DataTemplate>
                                <dt:EnvelopeViewCell>
                                    <dt:EnvelopeViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:EnvelopeViewCell.ContextActions>
                                </dt:EnvelopeViewCell>
                            </DataTemplate>
                        </OnIdiom.Phone>
                        <OnIdiom.Tablet>
                            <DataTemplate>
                                <dt:EnvelopeDetailedViewCell>
                                    <dt:EnvelopeDetailedViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:EnvelopeDetailedViewCell.ContextActions>
                                </dt:EnvelopeDetailedViewCell>
                            </DataTemplate>
                        </OnIdiom.Tablet>
                        <OnIdiom.Desktop>
                            <DataTemplate>
                                <dt:EnvelopeDetailedViewCell>
                                    <dt:EnvelopeDetailedViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference envelopeList}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:EnvelopeDetailedViewCell.ContextActions>
                                </dt:EnvelopeDetailedViewCell>
                            </DataTemplate>
                        </OnIdiom.Desktop>
                    </OnIdiom>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <BoxView
                        BackgroundColor="{StaticResource BackgroundColor}"
                        HeightRequest="{StaticResource Key=PrimaryActionButtonHeight}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Grid.Row="2"
                Margin="16,0,16,8"
                Style="{StaticResource PrimaryActionButtonStyle}"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddTransactionCommand}">
                <Button.HorizontalOptions>
                    <OnIdiom x:TypeArguments="LayoutOptions">
                        <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
                        <OnIdiom.Tablet>EndAndExpand</OnIdiom.Tablet>
                        <OnIdiom.Desktop>EndAndExpand</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.HorizontalOptions>
            </Button>
        </Grid>
    </uc:StepperPage.BodyContent>
</uc:StepperPage>
