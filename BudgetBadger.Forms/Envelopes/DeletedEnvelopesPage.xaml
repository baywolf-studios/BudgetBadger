<?xml version="1.0" encoding="UTF-8" ?>
<uc:ChildSearchPage
    x:Class="BudgetBadger.Forms.Envelopes.DeletedEnvelopesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    BackCommand="{Binding BackCommand}"
    PageTitle="Deleted Envelopes"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}">
    <uc:ChildSearchPage.BodyContent>
        <uc:HelperControl
            HelperText="No deleted envelopes"
            ImagePath="helperenvelope.svg"
            ShowHelper="{Binding NoEnvelopes}">
            <ListView
                x:Name="envelopeList"
                BackgroundColor="{StaticResource BackgroundColor}"
                HasUnevenRows="true"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                ItemsSource="{Binding FilteredEnvelopes}"
                RefreshCommand="{Binding RefreshCommand}"
                SelectedItem="{Binding SelectedBudget, Mode=TwoWay}"
                SeparatorVisibility="None">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior Command="{Binding SelectedCommand}" EventName="ItemSelected" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="{StaticResource Key=ListDoubleItemHeight}">
                            <Grid
                                Margin="-1"
                                Padding="1"
                                BackgroundColor="{StaticResource BackgroundColor}"
                                ColumnSpacing="16"
                                HeightRequest="{StaticResource Key=ListDoubleItemHeight}"
                                RowSpacing="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    x:Name="primaryLabel"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="16,0"
                                    Style="{StaticResource Key=ListDoubleItemLabelStyle}"
                                    Text="{Binding Description}"
                                    VerticalOptions="End" />
                                <Label
                                    x:Name="secondaryLabel"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="16,0"
                                    Style="{StaticResource Key=ListDoubleSubItemLabelStyle}"
                                    Text="{Binding Group.Description}"
                                    VerticalOptions="Start" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </uc:HelperControl>
    </uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
