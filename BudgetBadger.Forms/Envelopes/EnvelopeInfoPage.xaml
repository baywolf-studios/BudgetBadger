<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildSearchPage
    Title="{Binding Budget.Envelope.Description}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeInfoPage"
    x:Name="this"
    ToolbarItemText="Edit"
    ToolbarItemCommand="{Binding EditCommand}"
    ToolbarItemIcon="edit.svg"
    SearchCommand="{Binding SearchCommand}">
    <uc:ChildSearchPage.BodyContent>
        <Grid
            BackgroundColor="{StaticResource BackgroundColor}"
            Margin="0"
            ColumnSpacing="16" 
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <uc:Expander Grid.Row="0">
                <uc:Expander.HeaderContent>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Text="Remaining"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                        <Label
                            Grid.Column="1"
                            Text="{Binding Budget.Remaining, StringFormat='{0:c}'}"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="End"
                            FontSize="{StaticResource PageHeaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyMedium}"/>
                    </Grid>
                </uc:Expander.HeaderContent>
                <uc:Expander.BodyContent>
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Past"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding Budget.Past, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="Activity"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Budget.Activity, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Text="Budget"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{Binding Budget.Amount, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            FontSize="{StaticResource PageSubheaderFontSize}"
                            TextColor="{StaticResource SecondaryTextColor}"
                            FontFamily="{StaticResource FontFamilyRegular}"/>
                    </Grid>
                </uc:Expander.BodyContent>
            </uc:Expander>
            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <ListView
                Grid.Row="2"
                BackgroundColor="{StaticResource BackgroundColor}"
                SeparatorVisibility="None"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                ItemsSource="{Binding GroupedTransactions}"
                SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                IsGroupingEnabled="true"
                GroupDisplayBinding="{Binding Key}"
                HasUnevenRows="true">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding TransactionSelectedCommand}" />
                </ListView.Behaviors>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="{StaticResource ListDenseGroupHeaderHeight}">
                            <ContentView BackgroundColor="{StaticResource BackgroundColor}"
                                Margin="-1"
                                Padding="1">
                                <Label
                                    BackgroundColor="{StaticResource BackgroundColor}"
                                    Margin="16,0"
                                    FontSize="{StaticResource ListDenseGroupHeaderFontSize}"
                                    FontFamily="{StaticResource FontFamilyMedium}"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource ListGroupHeaderTextColor}"
                                    Text="{Binding Key}"/>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="{StaticResource ListDenseItemDoubleHeight}">
                            <Grid 
                                BackgroundColor="{StaticResource BackgroundColor}" 
                                Margin="16, 0" 
                                RowSpacing="0" 
                                ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <svg:SvgCachedImage
                                    InputTransparent="true"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    HeightRequest="24"
                                    WidthRequest="24"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    ReplaceStringMap="{Binding ReplaceColorUnchecked}"
                                    Source="uncheckedcheckbox.svg">
                                    <svg:SvgCachedImage.Triggers>
                                        <DataTrigger Binding="{Binding Posted}" Value="true" TargetType="svg:SvgCachedImage">
                                            <Setter Property="Source" Value="checkedcheckbox.svg"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Posted}" Value="false" TargetType="svg:SvgCachedImage">
                                            <Setter Property="Source" Value="uncheckedcheckbox.svg"/>
                                        </DataTrigger>
                                    </svg:SvgCachedImage.Triggers>
                                </svg:SvgCachedImage>
                                <Button
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Command="{Binding Path=BindingContext.TogglePostedTransaction, Source={x:Reference this}}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    BorderColor="White"
                                    BorderWidth="2">
                                </Button>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding Payee.Description}"
                                    FontSize="{StaticResource ListDenseItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="End"
                                    HorizontalTextAlignment="Start"
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource PrimaryTextColor}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Handle_Tapped" Command="{Binding Path=BindingContext.TogglePostedTransaction, Source={x:Reference this}}"/>
                                    </Label.GestureRecognizers>

                                    </Label>
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="1" 
                                    Text="{Binding Account.Description}"
                                    FontSize="{StaticResource ListDenseItemSecondaryFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start"
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource SecondaryTextColor}"/>
                                <Label 
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    Text="{Binding Amount, StringFormat='{0:c}'}"
                                    FontSize="{StaticResource ListDenseItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="End"
                                    LineBreakMode="NoWrap"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ContentView 
                        BackgroundColor="{StaticResource BackgroundColor}"
                        HeightRequest="{Binding Source={x:Reference Name=NewTransactionButton}, Path=Height}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Grid.Row="2"
                Margin="16,0,16,8"
                FontFamily="{StaticResource FontFamilyMedium}"
                FontSize="14"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddTransactionCommand}"
                BackgroundColor="{StaticResource AppBarColor}"
                BorderColor="{StaticResource AppBarColor}"
                TextColor="White"
                HeightRequest="40"
                BorderWidth="2"
                BorderRadius="2">
                <Button.HorizontalOptions>
                    <OnIdiom x:TypeArguments="LayoutOptions">
                        <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
                        <OnIdiom.Tablet>EndAndExpand</OnIdiom.Tablet>
                        <OnIdiom.Desktop>EndAndExpand</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.HorizontalOptions>
            </Button>
        </Grid>
    </uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
