<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildSearchPage
    Title="{Binding Budget.Envelope.Description}"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeInfoPage"
    ToolbarItemText="Edit"
    ToolbarItemCommand="{Binding EditCommand}"
    ToolbarItemIcon="edit.svg"
    SearchCommand="{Binding SearchCommand}">
    <uc:ChildSearchPage.BodyContent>
        <Grid
            BackgroundColor="White"
            Margin="0"
            ColumnSpacing="16" 
            RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="16,4,0,4"
                Text="Remaining"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Center"
                FontSize="{StaticResource PageHeaderFontSize}"
                TextColor="{StaticResource PrimaryTextColor}"
                FontFamily="{StaticResource FontFamilyMedium}"/>
            <Label
                Grid.Row="0"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Margin="0,4,16,4"
                Text="{Binding Budget.Remaining, StringFormat='{0:c}'}"
                HorizontalTextAlignment="End"
                VerticalTextAlignment="Center"
                FontSize="{StaticResource PageHeaderFontSize}"
                TextColor="{StaticResource SecondaryTextColor}"
                FontFamily="{StaticResource FontFamilyMedium}"/>
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="16,0,0,0"
                Text="Past"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource PrimaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="16,0,0,4"
                Text="{Binding Budget.Past, StringFormat='{0:c}'}"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource SecondaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <Label
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Text="Activity"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource PrimaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <Label
                Grid.Row="2"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Text="{Binding Budget.Activity, StringFormat='{0:c}'}"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource SecondaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <Label
                Grid.Row="1"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Margin="0,0,16,4"
                Text="Budget"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource PrimaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <Label
                Grid.Row="2"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Margin="0,0,16,4"
                Text="{Binding Budget.Amount, StringFormat='{0:c}'}"
                HorizontalTextAlignment="Center"
                FontSize="{StaticResource PageSubheaderFontSize}"
                TextColor="{StaticResource SecondaryTextColor}"
                FontFamily="{StaticResource FontFamilyRegular}"/>
            <BoxView
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <ListView
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                SeparatorVisibility="None"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                ItemsSource="{Binding GroupedTransactions}"
                SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                IsGroupingEnabled="true"
                GroupDisplayBinding="{Binding Key}"
                HasUnevenRows="true">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding TransactionSelectedCommand}" />
                </ListView.Behaviors>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="{StaticResource ListDenseGroupHeaderHeight}">
                            <ContentView 
                                BackgroundColor="White"
                                Margin="16,0">
                                <Label
                                    BackgroundColor="White"
                                    FontSize="{StaticResource ListDenseGroupHeaderFontSize}"
                                    FontFamily="{StaticResource FontFamilyMedium}"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource SecondaryTextColor}"
                                    Text="{Binding Key}"/>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="{StaticResource ListDenseItemDoubleHeight}">
                            <Grid 
                                BackgroundColor="White" 
                                Margin="16, 0" 
                                RowSpacing="0" 
                                ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="{Binding Payee.Description}"
                                    FontSize="{StaticResource ListDenseItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="End"
                                    HorizontalTextAlignment="Start"
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="0" 
                                    Text="{Binding Account.Description}"
                                    FontSize="{StaticResource ListDenseItemSecondaryFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Start"
                                    HorizontalTextAlignment="Start"
                                    LineBreakMode="TailTruncation"
                                    TextColor="{StaticResource SecondaryTextColor}"/>
                                <Label 
                                    Grid.Column="1"
                                    Grid.RowSpan="2"
                                    Text="{Binding Amount, StringFormat='{0:c}'}"
                                    FontSize="{StaticResource ListDenseItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="End"
                                    LineBreakMode="NoWrap"
                                    TextColor="{StaticResource PrimaryTextColor}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ContentView 
                        BackgroundColor="White"
                        HeightRequest="{Binding Source={x:Reference Name=NewTransactionButton}, Path=Height}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                Margin="16,0,16,8"
                FontFamily="{StaticResource FontFamilyMedium}"
                FontSize="14"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddTransactionCommand}"
                BackgroundColor="{StaticResource AppBarColor}"
                TextColor="White"
                BorderWidth="0"
                BorderRadius="2"/>
        </Grid>
    </uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
