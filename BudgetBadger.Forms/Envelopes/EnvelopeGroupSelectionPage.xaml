<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildSearchPage
    Title="Envelope Groups"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeGroupSelectionPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
	<uc:ChildSearchPage.BodyContent>
        <uc:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">
            <ListView 
                HasUnevenRows="true"
                BackgroundColor="White" 
                SeparatorVisibility="None" 
                IsPullToRefreshEnabled="true" 
                IsRefreshing="{Binding IsBusy, Mode=OneWay}" 
                RefreshCommand="{Binding RefreshCommand}" 
                ItemsSource="{Binding FilteredEnvelopeGroups}" 
                SelectedItem="{Binding SelectedEnvelopeGroup, Mode=TwoWay}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Header>
                    <Button
                        FontFamily="{StaticResource FontFamilyMedium}"
                        FontSize="14"
                        Margin="16,8"
                        Text="{Binding SearchText, StringFormat='Add Group: {0}'}" 
                        IsVisible="{Binding HasSearchText}"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{StaticResource AppBarColor}"
                        TextColor="White"
                        BorderWidth="0"
                        BorderRadius="2"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <Label
                                HeightRequest="32"
                                FontSize="{StaticResource ListItemFontSize}"
                                FontFamily="{StaticResource FontFamilyRegular}"
                                VerticalTextAlignment="Center"
                                TextColor="{StaticResource PrimaryTextColor}"
                                Text="{Binding Description}"
                                Margin="16, 8"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </uc:BusyIndicator>
	</uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
