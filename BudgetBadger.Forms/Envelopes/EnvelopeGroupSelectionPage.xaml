<?xml version="1.0" encoding="UTF-8" ?>
<uc:ChildSearchPage
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeGroupSelectionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    BackCommand="{Binding BackCommand}"
    PageTitle="Envelope Groups"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
    <uc:ChildSearchPage.BodyContent>
        <uc:HelperControl
            HelperText="Add an Envelope Group using the + button"
            ImagePath="helperenvelope.svg"
            ShowHelper="{Binding NoEnvelopeGroups}">
            <ListView
                BackgroundColor="{StaticResource BackgroundColor}"
                HasUnevenRows="true"
                Header="{x:Null}"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                ItemsSource="{Binding FilteredEnvelopeGroups}"
                RefreshCommand="{Binding RefreshCommand}"
                SelectedItem="{Binding SelectedEnvelopeGroup, Mode=TwoWay}"
                SeparatorVisibility="None">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior Command="{Binding SelectedCommand}" EventName="ItemSelected" />
                </ListView.Behaviors>
                <ListView.Triggers>
                    <DataTrigger
                        Binding="{Binding HasSearchText}"
                        TargetType="ListView"
                        Value="False">
                        <Setter Property="Header" Value="{x:Null}" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding HasSearchText}"
                        TargetType="ListView"
                        Value="True">
                        <Setter Property="Header" Value="{Binding .}" />
                    </DataTrigger>
                </ListView.Triggers>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <ContentView
                            Margin="-1"
                            Padding="1"
                            BackgroundColor="{StaticResource BackgroundColor}">
                            <Button
                                Margin="16,8"
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SecondaryActionButtonStyle}"
                                Text="{Binding SearchText, StringFormat='Add Group: {0}'}" />
                        </ContentView>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <dt:EnvelopeGroupViewCell />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </uc:HelperControl>
    </uc:ChildSearchPage.BodyContent>
</uc:ChildSearchPage>
