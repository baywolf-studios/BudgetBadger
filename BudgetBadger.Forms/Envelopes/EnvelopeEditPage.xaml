<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildPage
    PageTitle="Edit Budget"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeEditPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    ToolbarItemText="Save"
    ToolbarItemIcon="save.svg"
    ToolbarItemCommand="{Binding SaveCommand}">
    <uc:ChildPage.Triggers>
        <DataTrigger TargetType="uc:ChildPage" Binding="{Binding Budget.Envelope.IsNew}" Value="True">
            <Setter Property="PageTitle" Value="New Envelope" />
        </DataTrigger>
    </uc:ChildPage.Triggers>
    <uc:ChildPage.BodyContent>
        <uc:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">
            <Grid
                BackgroundColor="{StaticResource BackgroundColor}"
                Margin="0"
                ColumnSpacing="16" 
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Margin="16" ColumnSpacing="8">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Text="To Budget"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Start"
                        FontSize="{StaticResource PageHeaderFontSize}"
                        TextColor="{StaticResource PrimaryTextColor}"
                        FontAttributes="Bold"/>
                    <Label
                        Grid.Column="1"
                        Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="End"
                        FontSize="{StaticResource PageHeaderFontSize}"
                        TextColor="{StaticResource PrimaryTextColor}"
                        FontAttributes="Bold"/>
                </Grid>
                <BoxView
                    Grid.Row="1"
                    HeightRequest="1"
                    BackgroundColor="{StaticResource DividerColor}"
                    Margin="0"/>
                <ScrollView 
                    Grid.Row="2"
                    Margin="0"
                    Padding="0"
                    Orientation="Vertical">
                    <Grid
                        RowSpacing="16"
                        ColumnSpacing="0"
                        Margin="0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <uc:ButtonSelector
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding GroupSelectedCommand}"
                            Label="Group"
                            Text="{Binding Budget.Envelope.Group.Description}"/>
                        <uc:TextEntry
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Name"
                            Text="{Binding Budget.Envelope.Description}"/>
                        <uc:CalculatorEntry
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="16,0"
                            Prefix="$"
                            Label="Amount"
                            Number="{Binding Budget.Amount}"/>
                        <Button
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="16,0"
                            Text="Quick Budget"
                            VerticalOptions="End"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Command="{Binding QuickBudgetCommand}"
                            IsVisible="{Binding Budget.IsActive}"/>
                        <StackLayout
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Orientation="Vertical"
                            Spacing="0">
                            <uc:Checkbox
                                IsEnabled="{Binding IsNotDebt}"
                                Label="Ignore Overspend"
                                IsChecked="{Binding Budget.IgnoreOverspend}"/>
                            <uc:Checkbox
                                IsEnabled="{Binding IsNotDebt}"
                                Margin="32,0,0,0"
                                Label="Always"
                                IsChecked="{Binding Budget.Envelope.IgnoreOverspend}"
                                IsVisible="{Binding Budget.IgnoreOverspend}"/>
                        </StackLayout>
                        <uc:MultilineTextEntry
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Notes"
                            Text="{Binding Budget.Envelope.Notes}"/>
                        <Button
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding DeleteCommand}"
                            Text="Delete Envelope"
                            Style="{StaticResource SecondaryDestructionButtonStyle}">
                            <Button.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </Button.IsVisible>
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Budget.Envelope.IsActive}" Value="false">
                                    <Setter Property="IsVisible" Value="false"/>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding UndoDeleteCommand}"
                            Text="Undo Delete"
                            Style="{StaticResource SecondaryActionButtonStyle}">
                            <Button.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </Button.IsVisible>
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Budget.Envelope.IsDeleted}" Value="false">
                                    <Setter Property="IsVisible" Value="false"/>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </ScrollView>
                <BoxView
                    Grid.Row="3"
                    HeightRequest="1"
                    BackgroundColor="{StaticResource DividerColor}"
                    Margin="0"/>
                <Grid
                    Grid.Row="4"
                    Margin="16"
                    ColumnSpacing="16">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="To Budget"
                        HorizontalTextAlignment="Start"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                        HorizontalTextAlignment="Start"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Command="{Binding DeleteCommand}"
                        Text="Delete Envelope"
                        Style="{StaticResource SecondaryDestructionButtonStyle}"
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding Budget.Envelope.IsActive}" Value="false">
                                <Setter Property="IsVisible" Value="false"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Command="{Binding UndoDeleteCommand}"
                        Text="Undo Delete"
                        Style="{StaticResource SecondaryActionButtonStyle}"
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding Budget.Envelope.IsDeleted}" Value="false">
                                <Setter Property="IsVisible" Value="false"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </uc:BusyIndicator>
    </uc:ChildPage.BodyContent>
</uc:ChildPage>