<?xml version="1.0" encoding="UTF-8" ?>
<p:BasePage
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeEditPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:p="clr-namespace:BudgetBadger.Forms.Pages"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls">
    <p:BasePage.Header>
        <p:ChildHeader
            BackCommand="{Binding BackCommand}"
            PageTitle="Edit Budget"
            ToolbarItemCommand="{Binding SaveCommand}"
            ToolbarItemIcon="save.svg"
            ToolbarItemText="Save">
            <p:ChildHeader.Triggers>
                <DataTrigger
                    Binding="{Binding Budget.Envelope.IsNew}"
                    TargetType="p:ChildHeader"
                    Value="True">
                    <Setter Property="PageTitle" Value="New Envelope" />
                </DataTrigger>
            </p:ChildHeader.Triggers>
        </p:ChildHeader>
    </p:BasePage.Header>
    <p:BasePage.Body>
        <uc:BusyIndicator BusyText="{Binding BusyText}" IsBusy="{Binding IsBusy}">
            <Grid
                Margin="0"
                BackgroundColor="{StaticResource BackgroundColor}"
                ColumnSpacing="16"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <uc:Expander Grid.Row="0" IsExpanded="true">
                    <uc:Expander.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </uc:Expander.IsVisible>
                    <uc:Expander.HeaderContent>
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                HorizontalOptions="Start"
                                Style="{StaticResource PageHeaderLabelStyle}"
                                Text="To Budget"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                HorizontalOptions="End"
                                Style="{StaticResource PageHeaderLabelStyle}"
                                Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                                VerticalOptions="Center" />
                        </Grid>
                    </uc:Expander.HeaderContent>
                    <uc:Expander.BodyContent>
                        <Grid ColumnSpacing="16" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Past" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Budget.Past, StringFormat='{0:c}'}" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Activity" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Budget.Activity, StringFormat='{0:c}'}" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="Remaining" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Style="{StaticResource PageSubheaderLabelStyle}"
                                Text="{Binding Budget.Remaining, StringFormat='{0:c}'}" />
                        </Grid>
                    </uc:Expander.BodyContent>
                </uc:Expander>
                <BoxView
                    Grid.Row="1"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <ScrollView
                    Grid.Row="2"
                    Margin="0"
                    Padding="0"
                    Orientation="Vertical">
                    <Grid
                        Margin="0"
                        ColumnSpacing="16"
                        RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                        </Grid.RowDefinitions>
                        <uc:TextEntry
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Name"
                            Text="{Binding Budget.Envelope.Description}" />
                        <uc:ButtonSelector
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding GroupSelectedCommand}"
                            Label="Group"
                            Text="{Binding Budget.Envelope.Group.Description}" />
                        <uc:CurrencyCalculatorEntry
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Budget"
                            Number="{Binding Budget.Amount}" />
                        <uc:DropdownSelector
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            IsEnabled="{Binding IsNotDebt}"
                            ItemsSource="{Binding OverspendingTypes}"
                            Label="Overspending"
                            SelectedItem="{Binding Budget.HandleOverspend}" />
                        <uc:MultilineTextEntry
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Notes"
                            Text="{Binding Budget.Envelope.Notes}" />
                        <uc:Button2
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="16,0,0,0"
                            Command="{Binding DeleteCommand}"
                            Style="{StaticResource SecondaryDestructionButtonStyle}"
                            Text="Delete Envelope">
                            <uc:Button2.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </uc:Button2.IsVisible>
                            <uc:Button2.Triggers>
                                <DataTrigger
                                    Binding="{Binding Budget.Envelope.IsActive}"
                                    TargetType="Button"
                                    Value="false">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </uc:Button2.Triggers>
                        </uc:Button2>
                        <uc:Button2
                            Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding UndoDeleteCommand}"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Text="Undo Delete">
                            <uc:Button2.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </uc:Button2.IsVisible>
                            <uc:Button2.Triggers>
                                <DataTrigger
                                    Binding="{Binding Budget.Envelope.IsDeleted}"
                                    TargetType="Button"
                                    Value="false">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </uc:Button2.Triggers>
                        </uc:Button2>
                        <uc:Button2
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,0,16,0"
                            Command="{Binding QuickBudgetCommand}"
                            IsVisible="{Binding Budget.IsActive}"
                            Style="{StaticResource PrimaryActionButtonStyle}"
                            Text="Quick Budget">
                            <uc:Button2.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </uc:Button2.IsVisible>
                            <uc:Button2.Triggers>
                                <DataTrigger
                                    Binding="{Binding Budget.Envelope.IsActive}"
                                    TargetType="Button"
                                    Value="false">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </uc:Button2.Triggers>
                        </uc:Button2>
                    </Grid>
                </ScrollView>
                <BoxView
                    Grid.Row="3"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <Grid
                    Grid.Row="4"
                    Margin="16"
                    ColumnSpacing="16">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="To Budget"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalOptions="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Past"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Budget.Past, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="3"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Activity"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="3"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Budget.Activity, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="4"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="Remaining"
                        VerticalOptions="End" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="4"
                        HorizontalOptions="Center"
                        Style="{StaticResource PageSubheaderLabelStyle}"
                        Text="{Binding Budget.Remaining, StringFormat='{0:c}'}"
                        VerticalOptions="Start" />
                    <uc:Button2
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="6"
                        Command="{Binding DeleteCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource SecondaryDestructionButtonStyle}"
                        Text="Delete Envelope"
                        VerticalOptions="Center">
                        <uc:Button2.Triggers>
                            <DataTrigger
                                Binding="{Binding Budget.Envelope.IsActive}"
                                TargetType="Button"
                                Value="false">
                                <Setter Property="IsVisible" Value="false" />
                            </DataTrigger>
                        </uc:Button2.Triggers>
                    </uc:Button2>
                    <uc:Button2
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="6"
                        Command="{Binding UndoDeleteCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource SecondaryActionButtonStyle}"
                        Text="Undo Delete"
                        VerticalOptions="Center">
                        <uc:Button2.Triggers>
                            <DataTrigger
                                Binding="{Binding Budget.Envelope.IsDeleted}"
                                TargetType="Button"
                                Value="false">
                                <Setter Property="IsVisible" Value="false" />
                            </DataTrigger>
                        </uc:Button2.Triggers>
                    </uc:Button2>
                    <uc:Button2
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="7"
                        Margin="16,0"
                        Command="{Binding QuickBudgetCommand}"
                        IsVisible="{Binding Budget.IsActive}"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Text="Quick Budget"
                        VerticalOptions="Center" />

                </Grid>
            </Grid>
        </uc:BusyIndicator>
    </p:BasePage.Body>
</p:BasePage>