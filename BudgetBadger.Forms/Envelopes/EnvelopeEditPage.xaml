<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Edit Budget" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Envelopes.EnvelopeEditPage" xmlns:control="clr-namespace:BudgetBadger.Forms.UserControls">
    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentPage" Binding="{Binding Budget.IsNew}" Value="True">
            <Setter Property="Title" Value="New Envelope" />
        </DataTrigger>
    </ContentPage.Triggers>
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Text="Save" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <control:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection Title="Group">
                        <TextCell Command="{Binding GroupSelectedCommand}" Text="{Binding Budget.Envelope.Group.Description}">
                        </TextCell>
                    </TableSection>
                    <TableSection Title="Name">
                        <ViewCell>
                            <Entry Text="{Binding Budget.Envelope.Description}" />
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Amount">
                        <ViewCell>
                            <Entry Keyboard="Numeric" Text="{Binding Budget.Amount}" />
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Ignore Overspend">
                        <SwitchCell Text="Current Period" On="{Binding Budget.IgnoreOverspend}" />
                        <SwitchCell Text="Always" On="{Binding Budget.Envelope.IgnoreOverspend}" />
                    </TableSection>
                    <TableSection Title="Notes">
                        <ViewCell>
                            <Editor Text="{Binding Budget.Envelope.Notes}" />
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <Button IsVisible="{Binding Budget.IsActive}"  Command="{Binding DeleteCommand}" Text="Delete Envelope" TextColor="Red" />
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </control:BusyIndicator>
    </ContentPage.Content>
</ContentPage>