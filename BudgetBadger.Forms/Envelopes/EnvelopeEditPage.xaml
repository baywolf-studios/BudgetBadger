<?xml version="1.0" encoding="UTF-8" ?>
<uc:ChildPage
    x:Class="BudgetBadger.Forms.Envelopes.EnvelopeEditPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    BackCommand="{Binding BackCommand}"
    PageTitle="Edit Budget"
    ToolbarItemCommand="{Binding SaveCommand}"
    ToolbarItemIcon="save.svg"
    ToolbarItemText="Save">
    <uc:ChildPage.Triggers>
        <DataTrigger
            Binding="{Binding Budget.Envelope.IsNew}"
            TargetType="uc:ChildPage"
            Value="True">
            <Setter Property="PageTitle" Value="New Envelope" />
        </DataTrigger>
    </uc:ChildPage.Triggers>
    <uc:ChildPage.BodyContent>
        <uc:BusyIndicator BusyText="{Binding BusyText}" IsBusy="{Binding IsBusy}">
            <Grid
                Margin="0"
                BackgroundColor="{StaticResource BackgroundColor}"
                ColumnSpacing="16"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="16" ColumnSpacing="8">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="{StaticResource PageHeaderFontSize}"
                        HorizontalTextAlignment="Start"
                        Text="To Budget"
                        TextColor="{StaticResource PrimaryTextColor}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="{StaticResource PageHeaderFontSize}"
                        HorizontalTextAlignment="End"
                        Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                        TextColor="{StaticResource PrimaryTextColor}"
                        VerticalTextAlignment="Center" />
                </Grid>
                <BoxView
                    Grid.Row="1"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <ScrollView
                    Grid.Row="2"
                    Margin="0"
                    Padding="0"
                    Orientation="Vertical">
                    <Grid
                        Margin="0,16"
                        ColumnSpacing="0"
                        RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48" />
                            <RowDefinition Height="48" />
                            <RowDefinition Height="48" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <uc:ButtonSelector
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding GroupSelectedCommand}"
                            Label="Group"
                            Text="{Binding Budget.Envelope.Group.Description}" />
                        <uc:TextEntry
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Name"
                            Text="{Binding Budget.Envelope.Description}" />
                        <uc:CurrencyCalculatorEntry
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="16,0"
                            Label="Amount"
                            Number="{Binding Budget.Amount}" />
                        <Button
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="16,0"
                            Command="{Binding QuickBudgetCommand}"
                            IsVisible="{Binding Budget.IsActive}"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Text="Quick Budget"
                            VerticalOptions="End" />
                        <StackLayout
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Orientation="Vertical"
                            Spacing="0">
                            <uc:Checkbox
                                IsChecked="{Binding Budget.IgnoreOverspend}"
                                IsEnabled="{Binding IsNotDebt}"
                                Label="Ignore Overspend" />
                            <uc:Checkbox
                                Margin="32,0,0,0"
                                IsChecked="{Binding Budget.Envelope.IgnoreOverspend}"
                                IsEnabled="{Binding IsNotDebt}"
                                IsVisible="{Binding Budget.IgnoreOverspend}"
                                Label="Always" />
                        </StackLayout>
                        <uc:MultilineTextEntry
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Notes"
                            Text="{Binding Budget.Envelope.Notes}" />
                        <Button
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding DeleteCommand}"
                            Style="{StaticResource SecondaryDestructionButtonStyle}"
                            Text="Delete Envelope">
                            <Button.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </Button.IsVisible>
                            <Button.Triggers>
                                <DataTrigger
                                    Binding="{Binding Budget.Envelope.IsActive}"
                                    TargetType="Button"
                                    Value="false">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Command="{Binding UndoDeleteCommand}"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Text="Undo Delete">
                            <Button.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </Button.IsVisible>
                            <Button.Triggers>
                                <DataTrigger
                                    Binding="{Binding Budget.Envelope.IsDeleted}"
                                    TargetType="Button"
                                    Value="false">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </ScrollView>
                <BoxView
                    Grid.Row="3"
                    Margin="0"
                    BackgroundColor="{StaticResource DividerColor}"
                    HeightRequest="1" />
                <Grid
                    Grid.Row="4"
                    Margin="16"
                    ColumnSpacing="16">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="To Budget"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource PageHeaderLabelStyle}"
                        Text="{Binding Budget.Schedule.Balance, StringFormat='{0:c}'}"
                        VerticalTextAlignment="Center" />
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Command="{Binding DeleteCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource SecondaryDestructionButtonStyle}"
                        Text="Delete Envelope"
                        VerticalOptions="Center">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding Budget.Envelope.IsActive}"
                                TargetType="Button"
                                Value="false">
                                <Setter Property="IsVisible" Value="false" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Command="{Binding UndoDeleteCommand}"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource SecondaryActionButtonStyle}"
                        Text="Undo Delete"
                        VerticalOptions="Center">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding Budget.Envelope.IsDeleted}"
                                TargetType="Button"
                                Value="false">
                                <Setter Property="IsVisible" Value="false" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </uc:BusyIndicator>
    </uc:ChildPage.BodyContent>
</uc:ChildPage>