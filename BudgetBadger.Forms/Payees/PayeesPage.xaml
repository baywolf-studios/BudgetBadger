<?xml version="1.0" encoding="UTF-8"?>
<uc:RootSearchPage
    Title="Payees"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Payees.PayeesPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    SearchCommand="{Binding SearchCommand}"
    SearchText="{Binding SearchText}"
    ToolbarItemCommand="{Binding AddCommand}"
    ToolbarItemIcon="newicon.svg"
    ToolbarItemText="New">
    <uc:RootSearchPage.BodyContent>
        <Grid BackgroundColor="{StaticResource BackgroundColor}">
            <ListView
                x:Name="PayeeList" 
                BackgroundColor="{StaticResource BackgroundColor}" 
                SeparatorVisibility="None" 
                IsPullToRefreshEnabled="true" 
                IsRefreshing="{Binding IsBusy, Mode=OneWay}" 
                RefreshCommand="{Binding RefreshCommand}" 
                ItemsSource="{Binding GroupedPayees}" 
                SelectedItem="{Binding SelectedPayee, Mode=TwoWay}" 
                IsGroupingEnabled="true" 
                GroupDisplayBinding="{Binding Key}"
                HasUnevenRows="true"
                Header="{x:Null}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding SelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Triggers>
                   <DataTrigger TargetType="ListView" Binding="{Binding HasSearchText}" Value="False">
                      <Setter Property="Header" Value="{x:Null}"/>
                   </DataTrigger>
                   <DataTrigger TargetType="ListView" Binding="{Binding HasSearchText}" Value="True">
                      <Setter Property="Header" Value="{Binding .}"/>
                   </DataTrigger>
                </ListView.Triggers>
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <ContentView>
                            <Button
                                FontFamily="{StaticResource FontFamilyMedium}"
                                FontSize="14"
                                Margin="16,8"
                                Text="{Binding SearchText, StringFormat='Add Payee: {0}'}"
                                Command="{Binding SaveCommand}"
                                BackgroundColor="White"
                                BorderColor="{StaticResource AppBarColor}"
                                TextColor="{StaticResource AppBarColor}"
                                BorderWidth="1"
                                BorderRadius="4">
                            </Button>
                        </ContentView>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <StackLayout BackgroundColor="{StaticResource BackgroundColor}"
                                Margin="-1"
                                Padding="1">
                            <Label
                                HeightRequest="32"
                                FontSize="{StaticResource ListGroupHeaderFontSize}"
                                FontFamily="{StaticResource FontFamilyMedium}"
                                VerticalTextAlignment="Center"
                                TextColor="{StaticResource ListGroupHeaderTextColor}"
                                Text="{Binding Key}"
                                Margin="16, 8"/>
                                </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="48">
                            <ContentView BackgroundColor="{StaticResource BackgroundColor}"
                                Margin="-1"
                                Padding="1">
                                <Label
                                    HeightRequest="32"
                                    FontSize="{StaticResource ListItemFontSize}"
                                    FontFamily="{StaticResource FontFamilyRegular}"
                                    VerticalTextAlignment="Center"
                                    TextColor="{StaticResource PrimaryTextColor}"
                                    Text="{Binding Description}"
                                    Margin="16, 8"/>
                                </ContentView>
                            <ViewCell.ContextActions>
                                <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference PayeeList}}" CommandParameter="{Binding .}" Text="Edit" />
                                <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PayeeList}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                            </ViewCell.ContextActions>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ContentView 
                        BackgroundColor="White"
                        HeightRequest="{Binding Source={x:Reference Name=NewTransactionButton}, Path=Height}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Margin="16,0,16,8"
                FontFamily="{StaticResource FontFamilyMedium}"
                FontSize="14"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddTransactionCommand}"
                BackgroundColor="{StaticResource AppBarColor}"
                BorderColor="{StaticResource AppBarColor}"
                TextColor="White"
                HeightRequest="40"
                BorderWidth="2"
                BorderRadius="2">
                <Button.HorizontalOptions>
                    <OnIdiom x:TypeArguments="LayoutOptions">
                        <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
                        <OnIdiom.Tablet>EndAndExpand</OnIdiom.Tablet>
                        <OnIdiom.Desktop>EndAndExpand</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.HorizontalOptions>
            </Button>
        </Grid>
    </uc:RootSearchPage.BodyContent>
</uc:RootSearchPage>