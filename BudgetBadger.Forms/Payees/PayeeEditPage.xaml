<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Edit Payee" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Payees.PayeeEditPage" xmlns:control="clr-namespace:BudgetBadger.Forms.UserControls">
    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentPage" Binding="{Binding Payee.IsNew}" Value="True">
            <Setter Property="Title" Value="New Payee" />
        </DataTrigger>
    </ContentPage.Triggers>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Done" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <control:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">

            <Grid Margin="8" ColumnSpacing="8" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Name"/>
                <Entry Grid.Row="0" Grid.Column="1" Text="{Binding Payee.Description}"/>
                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Notes"/>
                <Frame OutlineColor="Black" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                    <control:BadgerEditor Text="{Binding Payee.Notes}"/>
                </Frame>
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding Payee.IsActive}" Text="Delete Payee" TextColor="Red" Command="{Binding DeleteCommand}"/>
            </Grid>


            <!--<TableView Intent="Form">
                <TableRoot>
                    <TableSection Title="Details">
                        <EntryCell Label="Name" Text="{Binding Payee.Description}" />
                    </TableSection>
                    <TableSection Title="Notes">
                        <ViewCell>
                            <Editor Text="{Binding Payee.Notes}">
                            </Editor>
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <Button IsVisible="{Binding Payee.IsActive}" Text="Delete Payee" TextColor="Red" Command="{Binding DeleteCommand}"/>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>-->
        </control:BusyIndicator>


    </ContentPage.Content>
</ContentPage>