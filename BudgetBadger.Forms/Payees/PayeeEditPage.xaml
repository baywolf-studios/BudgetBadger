<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildPage
    Title="Edit Payee"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Payees.PayeeEditPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    ToolbarItemText="Save"
    ToolbarItemIcon="save.svg"
    ToolbarItemCommand="{Binding SaveCommand}">
    <uc:ChildPage.Triggers>
        <DataTrigger TargetType="uc:ChildPage" Binding="{Binding Payee.IsNew}" Value="True">
            <Setter Property="Title" Value="New Payee" />
        </DataTrigger>
    </uc:ChildPage.Triggers>
    <uc:ChildPage.BodyContent>
        <uc:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">
            <ScrollView Orientation="Vertical">
                <Grid RowSpacing="16" ColumnSpacing="0" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <uc:TextEntry Grid.Row="0" Label="Name" Text="{Binding Payee.Description}"/>
                    <uc:MultilineTextEntry Grid.Row="1" Label="Notes" Text="{Binding Payee.Notes}"/>
                    <Button
                        Grid.Row="2"
                        IsVisible="{Binding Payee.IsActive}"
                        Command="{Binding DeleteCommand}"
                        FontFamily="{StaticResource FontFamilyMedium}"
                        FontSize="14"
                        Text="Delete Payee"
                        BackgroundColor="Red"
                        BorderColor="Red"
                        TextColor="White"
                        HeightRequest="40"
                        BorderWidth="2"
                        BorderRadius="2">
                        <Button.HorizontalOptions>
                            <OnIdiom x:TypeArguments="LayoutOptions">
                                <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
                                <OnIdiom.Tablet>EndAndExpand</OnIdiom.Tablet>
                                <OnIdiom.Desktop>EndAndExpand</OnIdiom.Desktop>
                            </OnIdiom>
                        </Button.HorizontalOptions>
                    </Button>
                </Grid>
            </ScrollView>
        </uc:BusyIndicator>
    </uc:ChildPage.BodyContent>
</uc:ChildPage>