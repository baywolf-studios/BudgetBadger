<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Edit Payee" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BudgetBadger.Forms.Payees.PayeeEditPage" xmlns:control="clr-namespace:BudgetBadger.Forms.UserControls">
    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentPage" Binding="{Binding Payee.IsNew}" Value="True">
            <Setter Property="Title" Value="New Payee" />
        </DataTrigger>
    </ContentPage.Triggers>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Done" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <control:BusyIndicator IsBusy="{Binding IsBusy}" BusyText="{Binding BusyText}">
            <StackLayout Orientation="Vertical" Margin="16" Spacing="8">
                <control:TextEntry Label="Name" Text="{Binding Payee.Description}"/>
                <control:MultilineTextEntry Label="Notes" Text="{Binding Payee.Notes}"/>
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding Payee.IsActive}" Text="Delete Payee" TextColor="Red" Command="{Binding DeleteCommand}"/>
            </StackLayout>
        </control:BusyIndicator>
    </ContentPage.Content>
</ContentPage>