<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="BudgetBadger.Forms.Style.FontIconResourceDictionary">
    <OnPlatform x:Key="IconFontFamily" x:TypeArguments="x:String">
        <On Platform="iOS, macOS" Value="FontAwesome" />
        <On Platform="Android" Value="materialdesignicons-webfont.ttf#Material Design Icons" />
        <On Platform="UWP" Value="Assets/Fonts/SegMDL2.ttf#Segoe MDL2 Assests" />
    </OnPlatform>


    <OnPlatform x:Key="SearchIcon" x:TypeArguments="x:String">
        <On Platform="iOS, macOS" Value="&#xf002;" />
        <On Platform="Android" Value="&#xf349;" />
        <On Platform="UWP" Value="&#xe721;" />
    </OnPlatform>
</ResourceDictionary>
