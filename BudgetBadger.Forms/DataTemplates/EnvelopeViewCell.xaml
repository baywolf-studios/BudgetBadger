<?xml version="1.0" encoding="UTF-8"?>
<ViewCell
    x:Name="envelopeCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.DataTemplates.EnvelopeViewCell"
    Height="48">
    <Grid
        HeightRequest="48"
        RowSpacing="0"
        ColumnSpacing="16"
        Margin="-1"
        Padding="1"
        BackgroundColor="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>   
        </Grid.ColumnDefinitions>
        <Label
            Margin="16, 8"
            Grid.Column="0"
            Text="{Binding Envelope.Description}"
            Style="{StaticResource Key=ListItemLabelStyle}"/>
        <Label 
            Margin="16, 8"
            Grid.Column="1" 
            Text="{Binding Remaining, StringFormat='{0:C}'}"
            Style="{StaticResource Key=ListItemLabelStyle}"
            HorizontalTextAlignment="End"/>
    </Grid>
    <ViewCell.ContextActions>
        <MenuItem Command="{Binding ParentContext.EditCommand, Source={x:Reference envelopeCell}}" CommandParameter="{Binding .}" Text="Edit" />
        <MenuItem Command="{Binding ParentContext.DeleteCommand, Source={x:Reference envelopeCell}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
    </ViewCell.ContextActions>
</ViewCell>
