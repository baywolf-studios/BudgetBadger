<?xml version="1.0" encoding="UTF-8"?>
<uc:SelectableViewCell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:BudgetBadger.Forms.Extensions"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    x:Class="BudgetBadger.Forms.DataTemplates.AccountDetailedViewCell">
    <Grid
        ColumnSpacing="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="56"/>
        </Grid.ColumnDefinitions>
        <uc:TextField
            x:Name="DescriptionControl"
            Grid.Column="0"
            Text="{Binding Description}"
            IsReadOnly="True">
        </uc:TextField>
        <Label
            Grid.Column="1"
            Style="{ext:DynamicResource ControlLabelStyle}"
            Text="{Binding Pending, Converter={StaticResource CurrencyConverter}}"
            HorizontalTextAlignment="End"
            VerticalOptions="Center">
        </Label>
        <Label
            Grid.Column="2"
            Style="{ext:DynamicResource ControlLabelStyle}"
            Text="{Binding Posted, Converter={StaticResource CurrencyConverter}}"
            HorizontalTextAlignment="End"
            VerticalOptions="Center">
        </Label>
        <Label
            Grid.Column="3"
            Style="{ext:DynamicResource ControlLabelStyle}"
            Text="{Binding Balance, Converter={StaticResource CurrencyConverter}}"
            HorizontalTextAlignment="End"
            VerticalOptions="Center">
        </Label>
        <uc:Button2
            x:Name="EditButton"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            Style="{ext:DynamicResource HiddenButtonStyle}"
            HeightRequest="40"
            Clicked="Handle_EditClicked">
            <uc:Button2.ImageSource>
                <FontImageSource
                    Size="{ext:DynamicResource size_250}"
                    Color="{ext:DynamicResource brand_600}"
                    FontFamily="{ext:DynamicResource Key=IconFontFamily}"
                    Glyph="{ext:DynamicResource Key=EditIcon}" />
                </uc:Button2.ImageSource>
        </uc:Button2>
        <uc:Button2
            x:Name="SaveButton"
            Grid.Column="4"
            Style="{ext:DynamicResource HiddenButtonStyle}"
            HeightRequest="40"
            Clicked="Handle_SaveClicked"
            IsVisible="False">
            <uc:Button2.ImageSource>
                <FontImageSource
                    Size="{ext:DynamicResource size_250}"
                    Color="{ext:DynamicResource brand_600}"
                    FontFamily="{ext:DynamicResource Key=IconFontFamily}"
                    Glyph="{ext:DynamicResource Key=SaveIcon}" />
                </uc:Button2.ImageSource>
        </uc:Button2>
        <uc:Button2
            x:Name="CancelButton"
            Grid.Column="5"
            Style="{ext:DynamicResource HiddenButtonStyle}"
            HeightRequest="40"
            Clicked="Handle_CancelClicked"
            IsVisible="False">
            <uc:Button2.ImageSource>
                <FontImageSource
                    Size="{ext:DynamicResource size_250}"
                    Color="{ext:DynamicResource brand_600}"
                    FontFamily="{ext:DynamicResource Key=IconFontFamily}"
                    Glyph="{ext:DynamicResource Key=CancelIcon}" />
                </uc:Button2.ImageSource>
        </uc:Button2>
    </Grid>
</uc:SelectableViewCell>
