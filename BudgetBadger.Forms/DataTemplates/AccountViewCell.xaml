<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="BudgetBadger.Forms.DataTemplates.AccountViewCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:BudgetBadger.Forms.Extensions"
    x:Name="accountCell"
    ColumnSpacing="16"
    RowSpacing="0">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="{ext:DynamicResource size_10}"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="1" />
    </Grid.ColumnDefinitions>
    <Label
        Grid.Row="0"
        Grid.Column="0"
        Style="{ext:DynamicResource Key=ListSingleHeightItemLabelStyle}"
        Text="{Binding Description}"/>
    <Label
        Grid.Row="0"
        Grid.Column="1"
        HorizontalOptions="End"
        Style="{ext:DynamicResource Key=ListSingleHeightItemLabelStyle}"
        Text="{Binding Balance, Converter={StaticResource CurrencyConverter}}" />
    <BoxView
        Grid.Row="1"
        Grid.ColumnSpan="2"
        Style="{ext:DynamicResource DividerStyle}"/>
</Grid>
