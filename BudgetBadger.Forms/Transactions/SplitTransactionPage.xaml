<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildPage 
    x:Name="this"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    xmlns:dt="clr-namespace:BudgetBadger.Forms.DataTemplates"
    x:Class="BudgetBadger.Forms.Transactions.SplitTransactionPage"
    Title="Split Transaction"
    ToolbarItemIcon="save.svg"
    ToolbarItemText="Save"
    ToolbarItemCommand="{Binding SaveCommand}">
    <uc:ChildPage.BodyContent>
        <Grid
            BackgroundColor="{StaticResource BackgroundColor}"
            Margin="0"
            ColumnSpacing="16"
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <uc:Expander
                Grid.Row="0"
                IsExpanded="true">
                <uc:Expander.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>true</OnIdiom.Phone>
                        <OnIdiom.Tablet>false</OnIdiom.Tablet>
                        <OnIdiom.Desktop>false</OnIdiom.Desktop>
                    </OnIdiom>
                </uc:Expander.IsVisible>
                <uc:Expander.HeaderContent>
                    <Grid
                        ColumnSpacing="8">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>true</OnIdiom.Phone>
                            <OnIdiom.Tablet>false</OnIdiom.Tablet>
                            <OnIdiom.Desktop>false</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Text="Total"
                        HorizontalTextAlignment="Start"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                    <Label
                        Grid.Column="1"
                        Text="{Binding Total, StringFormat='{0:c}'}"
                        HorizontalTextAlignment="End"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                </Grid>
                </uc:Expander.HeaderContent>
                <uc:Expander.BodyContent>
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Running Total"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="End"
                            Style="{StaticResource PageSubheaderLabelStyle}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding RunningTotal, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Start"
                            Style="{StaticResource PageSubheaderLabelStyle}"/>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="Remaining"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="End"
                            Style="{StaticResource PageSubheaderLabelStyle}"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Remaining, StringFormat='{0:c}'}"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Start"
                            Style="{StaticResource PageSubheaderLabelStyle}"/>
                    </Grid>
                </uc:Expander.BodyContent>
            </uc:Expander>
             <BoxView
                Grid.Row="1"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <ListView
                Grid.Row="2"
                BackgroundColor="{StaticResource BackgroundColor}"
                SeparatorVisibility="None"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshCommand="{Binding RefreshCommand}"
                ItemsSource="{Binding Transactions}"
                SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                HasUnevenRows="true">
                <ListView.Behaviors>
                        <b:EventToCommandBehavior EventName="ItemSelected" Command="{Binding TransactionSelectedCommand}" />
                </ListView.Behaviors>
                <ListView.Header>
                    <dt:TransactionColumnHeaders TransactionViewCellType="Full">
                        <dt:TransactionColumnHeaders.Triggers>
                            <Trigger TargetType="ContentView" Property="IsVisible" Value="False">
                                <Setter Property="HeightRequest" Value="0" />
                            </Trigger>
                        </dt:TransactionColumnHeaders.Triggers>
                        <dt:TransactionColumnHeaders.IsVisible>
                            <OnIdiom x:TypeArguments="x:Boolean">
                                <OnIdiom.Phone>false</OnIdiom.Phone>
                                <OnIdiom.Desktop>true</OnIdiom.Desktop>
                                <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            </OnIdiom>
                        </dt:TransactionColumnHeaders.IsVisible>
                    </dt:TransactionColumnHeaders>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <OnIdiom x:TypeArguments="DataTemplate">
                        <OnIdiom.Phone>
                            <DataTemplate>
                                <dt:TransactionViewCell
                                    TransactionViewCellType="Full"
                                    Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}">
                                    <dt:TransactionViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:TransactionViewCell.ContextActions>
                                </dt:TransactionViewCell>
                            </DataTemplate>
                        </OnIdiom.Phone>
                        <OnIdiom.Tablet>
                            <DataTemplate>
                                <dt:TransactionDetailedViewCell
                                    TransactionViewCellType="Full"
                                    Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}">
                                    <dt:TransactionDetailedViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:TransactionDetailedViewCell.ContextActions>
                                </dt:TransactionDetailedViewCell>
                            </DataTemplate>
                        </OnIdiom.Tablet>
                        <OnIdiom.Desktop>
                            <DataTemplate>
                                <dt:TransactionDetailedViewCell
                                    TransactionViewCellType="Full"
                                    Command="{Binding BindingContext.TogglePostedTransactionCommand, Source={x:Reference Name=this}}">
                                    <dt:TransactionDetailedViewCell.ContextActions>
                                        <MenuItem Command="{Binding BindingContext.EditCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Edit" />
                                        <MenuItem Command="{Binding BindingContext.DeleteCommand, Source={x:Reference this}}" CommandParameter="{Binding .}" Text="Delete" IsDestructive="True" />
                                    </dt:TransactionDetailedViewCell.ContextActions>
                                </dt:TransactionDetailedViewCell>
                            </DataTemplate>
                        </OnIdiom.Desktop>
                    </OnIdiom>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <BoxView
                        BackgroundColor="{StaticResource BackgroundColor}"
                        HeightRequest="{StaticResource Key=FooterHiddenButtonHeight}"/>
                </ListView.Footer>
            </ListView>
            <Button
                x:Name="NewTransactionButton"
                Grid.Row="2"
                Margin="16,0,16,16"
                Text="Add Transaction" 
                VerticalOptions="End"
                Command="{Binding AddNewCommand}"
                Style="{StaticResource PrimaryActionButtonStyle}">
                <Button.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>true</OnIdiom.Phone>
                        <OnIdiom.Tablet>false</OnIdiom.Tablet>
                        <OnIdiom.Desktop>false</OnIdiom.Desktop>
                    </OnIdiom>
                </Button.IsVisible>
            </Button>
            <BoxView
                Grid.Row="3"
                HeightRequest="1"
                BackgroundColor="{StaticResource DividerColor}"
                Margin="0"/>
            <Grid
                Grid.Row="4"
                Margin="16"
                ColumnSpacing="16">
                <Grid.IsVisible>
                    <OnIdiom x:TypeArguments="x:Boolean">
                        <OnIdiom.Phone>false</OnIdiom.Phone>
                        <OnIdiom.Tablet>true</OnIdiom.Tablet>
                        <OnIdiom.Desktop>true</OnIdiom.Desktop>
                    </OnIdiom>
                </Grid.IsVisible>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Total"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource PageHeaderLabelStyle}"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="{Binding Total, StringFormat='{0:c}'}"
                    HorizontalTextAlignment="Start"
                    Style="{StaticResource PageHeaderLabelStyle}"/>
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="Running Total"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="End"
                    Style="{StaticResource PageSubheaderLabelStyle}"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="{Binding RunningTotal, StringFormat='{0:c}'}"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Start"
                    Style="{StaticResource PageSubheaderLabelStyle}"/>
                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    Text="Remaining"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="End"
                    Style="{StaticResource PageSubheaderLabelStyle}"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="3"
                    Text="{Binding Remaining, StringFormat='{0:c}'}"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Start"
                    Style="{StaticResource PageSubheaderLabelStyle}"/>
                <Button
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="5"
                    Text="Add New" 
                    VerticalOptions="Center"
                    Command="{Binding AddNewCommand}"
                    Style="{StaticResource PrimaryActionButtonStyle}"/>
            </Grid>
        </Grid>
    </uc:ChildPage.BodyContent>
</uc:ChildPage>