<?xml version="1.0" encoding="UTF-8"?>
<uc:ChildPage
    Title="Edit Transaction"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BudgetBadger.Forms.Transactions.TransactionEditPage"
    xmlns:uc="clr-namespace:BudgetBadger.Forms.UserControls"
    xmlns:converters="clr-namespace:BudgetBadger.Forms.Converters" 
    ToolbarItemText="Save"
    ToolbarItemCommand="{Binding SaveCommand}"
    ToolbarItemIcon="save.svg">
    <uc:ChildPage.Triggers>
        <DataTrigger TargetType="uc:ChildPage" Binding="{Binding Transaction.IsNew}" Value="True">
            <Setter Property="Title" Value="New Transaction" />
        </DataTrigger>
    </uc:ChildPage.Triggers>
    <uc:ChildPage.BodyContent>
        <uc:BusyIndicator
            IsBusy="{Binding IsBusy}"
            BusyText="{Binding BusyText}">
            <Grid
                BackgroundColor="{StaticResource BackgroundColor}"
                Margin="0"
                ColumnSpacing="16" 
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollView
                    Grid.Row="2"
                    Margin="0"
                    Padding="0"
                    Orientation="Vertical">
                    <Grid
                        RowSpacing="16"
                        ColumnSpacing="16"
                        Margin="0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <uc:CalculatorEntry
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="16,0,0,0"
                            Prefix="$"
                            Label="Outflow"
                            Number="{Binding Transaction.Outflow}"/>
                        <uc:CalculatorEntry
                            Grid.Row="0" 
                            Grid.Column="1"
                            Margin="0,0,16,0"
                            Prefix="$"
                            Label="Inflow"
                            Number="{Binding Transaction.Inflow}"/>
                        <uc:ButtonSelector
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Account"
                            Text="{Binding Transaction.Account.Description}"
                            Command="{Binding AccountSelectedCommand}"/>
                        <uc:ButtonSelector
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Payee"
                            Text="{Binding Transaction.Payee.Description}"
                            Command="{Binding PayeeSelectedCommand}"/>
                        <uc:ButtonSelector
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Envelope"
                            Text="{Binding Transaction.Envelope.Description}"
                            Command="{Binding EnvelopeSelectedCommand}"/>
                        <uc:DateSelector
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Service Date"
                            Date="{Binding Transaction.ServiceDate}"/>
                        <StackLayout
                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Orientation="Vertical"
                            Spacing="0">
                            <Label
                                FontSize="12"
                                TextColor="{StaticResource SecondaryTextColor}"
                                VerticalOptions="Center"
                                HeightRequest="16"
                                Text="Status"/>
                            <uc:Checkbox Label="Cleared" IsChecked="{Binding Transaction.Posted}"/>
                        </StackLayout>
                        <uc:MultilineTextEntry
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Margin="16,0"
                            Label="Notes"
                            Text="{Binding Transaction.Notes}"/>
                        <Grid
                            Grid.Row="7"
                            Grid.ColumnSpan="2"
                            ColumnSpacing="16"
                            RowSpacing="16"
                            Margin="0">
                            <Grid.IsVisible>
                                <OnIdiom x:TypeArguments="x:Boolean">
                                    <OnIdiom.Phone>true</OnIdiom.Phone>
                                    <OnIdiom.Tablet>false</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>false</OnIdiom.Desktop>
                                </OnIdiom>
                            </Grid.IsVisible>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="16,0"
                                Command="{Binding DeleteCommand}"
                                Text="Delete Transaction"
                                Style="{StaticResource SecondaryDestructionButtonStyle}"
                                IsVisible="false">
                                <Button.Triggers>
                                    <MultiTrigger TargetType="Button">
                                        <MultiTrigger.Conditions>
                                            <BindingCondition Binding="{Binding SplitTransactionMode}" Value="true"/>
                                            <BindingCondition Binding="{Binding Transaction.IsActive}" Value="true"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="IsVisible" Value="true"/>
                                    </MultiTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="16,0"
                                Command="{Binding SplitCommand}"
                                Text="Split Transaction"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                IsVisible="false">
                                <Button.Triggers>
                                    <MultiTrigger TargetType="Button">
                                        <MultiTrigger.Conditions>
                                            <BindingCondition Binding="{Binding SplitTransactionMode}" Value="false"/>
                                            <BindingCondition Binding="{Binding Transaction.IsNew}" Value="true"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="IsVisible" Value="True"/>
                                    </MultiTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="16,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Text="Delete Transaction"
                                Style="{StaticResource SecondaryDestructionButtonStyle}"
                                IsVisible="false">
                                <Button.Triggers>
                                    <MultiTrigger TargetType="Button">
                                        <MultiTrigger.Conditions>
                                            <BindingCondition Binding="{Binding SplitTransactionMode}" Value="false"/>
                                            <BindingCondition Binding="{Binding Transaction.IsActive}" Value="true"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="IsVisible" Value="true"/>
                                    </MultiTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,16,0"
                                Command="{Binding SplitCommand}"
                                Text="Split Transaction"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                IsVisible="false">
                                <Button.Triggers>
                                    <MultiTrigger TargetType="Button">
                                        <MultiTrigger.Conditions>
                                            <BindingCondition Binding="{Binding SplitTransactionMode}" Value="false"/>
                                            <BindingCondition Binding="{Binding Transaction.IsActive}" Value="true"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="IsVisible" Value="true"/>
                                    </MultiTrigger>
                                </Button.Triggers>
                            </Button>
                        </Grid>
                    </Grid>
                </ScrollView>
                <BoxView
                    Grid.Row="3"
                    HeightRequest="1"
                    BackgroundColor="{StaticResource DividerColor}"
                    Margin="0"/>
                <Grid
                    Grid.Row="4"
                    Margin="16"
                    ColumnSpacing="16">
                    <Grid.IsVisible>
                        <OnIdiom x:TypeArguments="x:Boolean">
                            <OnIdiom.Phone>false</OnIdiom.Phone>
                            <OnIdiom.Tablet>true</OnIdiom.Tablet>
                            <OnIdiom.Desktop>true</OnIdiom.Desktop>
                        </OnIdiom>
                    </Grid.IsVisible>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text=""
                        HorizontalTextAlignment="Start"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text=""
                        HorizontalTextAlignment="Start"
                        VerticalTextAlignment="Center"
                        Style="{StaticResource PageHeaderLabelStyle}"/>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="2"
                        Command="{Binding DeleteCommand}"
                        Text="Delete Transaction"
                        Style="{StaticResource SecondaryDestructionButtonStyle}"
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding Transaction.IsNew}" Value="true">
                                <Setter Property="IsVisible" Value="false"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="3"
                        Command="{Binding SplitCommand}"
                        Text="Split Transaction"
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        VerticalOptions="Center"
                        HorizontalOptions="EndAndExpand">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding SplitTransactionMode}" Value="true">
                                <Setter Property="IsVisible" Value="false"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </uc:BusyIndicator>
    </uc:ChildPage.BodyContent>
</uc:ChildPage>